$(
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
        The exponential, sine, and cosine functions (cont.)
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
$)


  ${
    $d F p q r v w z $.  $d G p q r v w z $.  $d O v w x y z $.  $d A x y $.
    $d H z $.  $d J z $.  $d C p q r w $.
    sinco.1 $e |- F = { <. x , y >. | ( x e. CC /\ y = ( _i x. x ) ) } $.
    sinco.2 $e |- G = { <. x , y >. | ( x e. CC /\ y = ( -u _i x. x ) ) } $.

    ${
      sincolem.3 $e |- J = { <. x , y >. | ( x e. CC /\ y = ( x / A ) ) } $.
      sincolem.4 $e |- H = { <. w , v >. | ( w e. CC /\ v =
                 ( ( ( exp o. F ) ` w ) O ( ( exp o. G ) ` w ) ) ) } $.

      ${
        sincolem.5 $e |- ( ( ( ( exp o. F ) ` z ) e. CC /\
                             ( ( exp o. G ) ` z ) e. CC ) ->
               ( ( ( exp o. F ) ` z ) O ( ( exp o. G ) ` z ) ) e. CC ) $.
        sincolem.6 $e |- A e. CC $.
        sincolem.7 $e |- A =/= 0 $.
        $( Lemma for ~ sinco and ~ cosco . $)
        sincolem $p |- ( ( J o. H ) Fn CC /\
                         ( z e. CC -> ( ( J o. H ) ` z ) =
          ( ( ( exp ` ( _i x. z ) ) O ( exp ` ( -u _i x. z ) ) ) / A ) ) ) $=
          ( cc wcel ccom wfn cv cfv ci cmul co ce cneg cdiv wi wf oprex fnopab2
          wceq wral fveq2 opreq12d eleq1d cbvralv ax-icn mulcl mpan fopab mp2an
          eff fco ffvelrni negcli syl11anc mprgbir fopab2 mpbi fnfco wfun fnfun
          ax-mp fvco3 mp3an12 fvopab4g mpdan ffun opreq2 eqtrd eqeltrrd cc0 wne
          fveq2d divcl mp3an23 opreq1 syl 3eqtrd pm3.2i ) JIUAZSUBZCUCZSTZWQWOU
          DZUEWQUFUGZUHUDZUEUIZWQUFUGZUHUDZKUGZFUJUGZUOUKJSUBZSSIULZWPABSAUCZFU
          JUGZJXIFUJUMNUNZDUCZUHGUAZUDZXLUHHUAZUDZKUGZSTZDSUPZXHXSWQXMUDZWQXOUD
          ZKUGZSTZCSXRYCDCSXLWQUOZXQYBSYDXNXTXPYAKXLWQXMUQXLWQXOUQURZUSUTWRXTST
          YASTYCSSWQXMSSUHULZSSGULZSSXMULVFABSSUEXIUFUGZGLUESTZXISTZYHSTVAUEXIV
          BVCVDZSSSUHGVGVEVHSSWQXOYFSSHULZSSXOULVFABSSXBXIUFUGZHMXBSTZYJYMSTUEV
          AVIZXBXIVBVCVDZSSSUHHVGVEVHPVJZVKDESSXQIOVLVMZSSJIVNVEWRWSWQIUDZJUDZX
          EJUDZXFJVOZXHWRWSYTUOXGUUBXKSJVPVQYRSSWQJIVRVSWRYSXEJWRYSYBXEWRYCYSYB
          UOYQDEWQXQYBSSIYEOVTWAWRXTXAYAXDKWRXTWQGUDZUHUDZXAUHVOZYGWRXTUUDUOYFU
          UEVFSSUHWBVQZYKSSWQUHGVRVSWRUUCWTUHWRWTSTZUUCWTUOYIWRUUGVAUEWQVBVCABW
          QYHWTSSGXIWQUEUFWCLVTWAWHWDWRYAWQHUDZUHUDZXDUUEYLWRYAUUIUOUUFYPSSWQUH
          HVRVSWRUUHXCUHWRXCSTZUUHXCUOYNWRUUJYOXBWQVBVCABWQYMXCSSHXIWQXBUFWCMVT
