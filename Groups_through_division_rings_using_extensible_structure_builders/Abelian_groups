$(
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
                   Abelian groups
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
$)

  $c Abel $.

  $( Extend class notation with class of all Abelian groups. $)
  cabel $a class Abel $.

  ${
    $d a b g $.
    $( Define class of all Abelian groups. $)
    df-abl $a |- Abel = { g e. Grp | A. a e. ( Base ` g )
      A. b e. ( Base ` g ) ( a ( +g ` g ) b ) = ( b ( +g ` g ) a ) } $.
  $}

  ${
    $d g x y B $.  $d g x y G $.  $d g P $.
    isabl.b $e |- B = ( Base ` G ) $.
    isabl.p $e |- P = ( +g ` G ) $.
    $( The predicate "is an Abelian (commutative) group." $)
    isabl $p |- ( G e. Abel <-> ( G e. Grp /\
             A. x e. B A. y e. B ( x P y ) = ( y P x ) ) ) $=
      ( vg cv cplusg cfv co wceq cbs wral cgrp cabel wb fveq2 syl6eqr raleq
      raleqbi1dv syl opreqd eqeq12d 2ralbidv bitrd df-abl elrab2 ) AIZBIZHIZJKZ
      LZUKUJUMLZMZBULNKZOZAUQOZUJUKDLZUKUJDLZMZBCOACOZHEPQULEMZUSUPBCOZACOZVCVD
      UQCMUSVFRVDUQENKCULENSFTURVEAUQCUPBUQCUAUBUCVDUPVBABCCVDUNUTUOVAVDUMDUJUK
      VDUMEJKDULEJSGTZUDVDUMDUKUJVGUDUEUFUGHABUHUI $.
      $( [17-Oct-2011] $)
  $}

  ${
    $d x y B $.  $d x y G $.  $d x y ph $.
    isabld.g $e |- ( ph -> G e. Grp ) $.
    isabld.b $e |- ( ph -> B = ( Base ` G ) ) $.
    isabld.p $e |- ( ph -> P = ( +g ` G ) ) $.
    isabld.c $e |- ( ( ph /\ x e. B /\ y e. B ) -> ( x P y ) = ( y P x ) ) $.
    $( Properties that determine an Abelian group. $)
    isabld $p |- ( ph -> G e. Abel ) $=
      ( cgrp wcel cv cplusg cfv co wceq cbs wral wa cabel opreqd eqeq12d
      raleqbidv anbi2d 3expib r19.21aivv mpbi2and eqid isabl sylibr ) AFKLZBMZC
      MZFNOZPZUNUMUOPZQZCFROZSZBUSSZTZFUALAULUMUNEPZUNUMEPZQZCDSZBDSZVBAVGVAULA
      VFUTBDUSHAVEURCDUSHAVCUPVDUQAEUOUMUNIUBAEUOUNUMIUBUCUDUDUEGAVEBCDDAUMDLUN
      DLVEJUFUGUHBCUSUOFUSUIUOUIUJUK $.
      $( [6-Aug-2013] $)
  $}

  ${
    $d x y B $.  $d x y G $.
    isabli.g $e |- G e. Grp $.
    isabli.b $e |- B = ( Base ` G ) $.
    isabli.p $e |- P = ( +g ` G ) $.
    isabli.c $e |- ( ( x e. B /\ y e. B ) -> ( x P y ) = ( y P x ) ) $.
    $( Properties that determine an Abelian group. $)
    isabli $p |- G e. Abel $=
      ( cabel wcel cgrp cv co wceq wral isabl rgen2a mpbir2an ) EJKELKAMZBMZDNU
      ATDNOZBCPACPABCDEGHQFUBABCIRS $.
      $( [4-Sep-2011] $)
  $}

  ${
    $d x y G $.
    $( An Abelian group is a group. $)
    ablgrp $p |- ( G e. Abel -> G e. Grp ) $=
      ( vx vy cabel wcel cgrp cv cplusg cfv co wceq cbs wral eqid isabl
      simplbi ) ADEAFEBGZCGZAHIZJRQSJKCALIZMBTMBCTSATNSNOP $.
      $( [26-Aug-2011] $)
  $}

  ${
    $d x y B $.  $d x y G $.  $d x y P $.  $d x y X $.  $d y Y $.
    ablcom.b $e |- B = ( Base ` G ) $.
    ablcom.p $e |- P = ( +g ` G ) $.
    $( An Abelian group operation is commutative. $)
    ablcom $p |- ( ( G e. Abel /\ X e. B /\ Y e. B ) ->
                 ( X P Y ) = ( Y P X ) ) $=
      ( vx vy cabel wcel co wceq cv wral wa cgrp isabl simprbi opreq1 opreq2
      eqeq12d rcla42v syl5com 3impib ) CJKZDAKZEAKZDEBLZEDBLZMZUFHNZINZBLZUMULB
      LZMZIAOHAOZUGUHPUKUFCQKUQHIABCFGRSUPUKDUMBLZUMDBLZMHIDEAAULDMUNURUOUSULDU
      MBTULDUMBUAUBUMEMURUIUSUJUMEDBUAUMEDBTUBUCUDUE $.
      $( [26-Aug-2011] $)
  $}

  ${
    $d x y z G $.
    cnaddablx.g $e |- G = { <. 1 , CC >. , <. 2 , + >. } $.
    $( The complex numbers are an Abelian group under addition.  This version
       of ~ cnaddabl shows the explicit structure "scaffold" we chose for the
       definition for Abelian groups. $)
    cnaddablx $p |- G e. Abel $=
      ( vx vy vz cc caddc cv cneg cc0 ax-cnex addex ax-addcl ax-addass 0cn
      addid2 negcl wcel co wceq addcom mpdan negid eqtr3d isgrpix grpbasex
      grpplusgx isabli ) CDFGACDEFGACHZIZJKLBUIDHZMUIUKEHNOUIPUIQZUIFRZUIUJGSZU
      JUIGSZJUMUJFRUNUOTULUIUJUAUBUIUCUDUEFGAKLBUFFGAKLBUGUIUKUAUH $.
      $( [18-Oct-2012] $)
  $}

  ${
    $d x y z G $.
    cnaddabl.g $e |- G
               = { <. ( Base ` ndx ) , CC >. , <. ( +g ` ndx ) , + >. } $.
    $( The complex numbers are an Abelian group under addition.  This version
       of ~ cnaddablx hides the explicit structure indices i.e. is
       "scaffold-independent".  Note that the proof also does not reference
       explicit structure indices.  The actual structure is dependent on how
       ` Base ` and ` +g ` is defined. $)
    cnaddabl $p |- G e. Abel $=
      ( vx vy vz cc caddc cv cneg cc0 cnx cbs cfv cop cplusg cpr cvv prex
      eqeltri ax-cnex addex grpbaseOLD grpplusgOLD ax-addcl ax-addass 0cn
      addid2 negcl wcel co wceq addcom mpdan negid eqtr3d isgrpi isabli ) CDFGA
      CDEFGACHZIZJAKLMFNZKOMGNZPQBUTVARSFGATUABUBZFGATUABUCZURDHZUDURVDEHUEUFUR
      UGURUHZURFUIZURUSGUJZUSURGUJZJVFUSFUIVGVHUKVEURUSULUMURUNUOUPVBVCURVDULUQ
      $.
      $( [20-Oct-2012] $)
  $}

  ${
    $d x y z G $.
    zaddablx.g $e |- G = { <. 1 , ZZ >. , <. 2 , + >. } $.
    $( The integers are an Abelian group under addition. $)
    zaddablx $p |- G e. Abel $=
      ( vx vy vz cz caddc cv cneg cc0 zex addex zaddcl wcel cc co wceq zcn
      addass syl3an 0z addid2 syl znegcl addcom syl2an mpdan negid eqtr3d
      isgrpix grpbasex grpplusgx isabli ) CDFGACDEFGACHZIZJKLBUNDHZMUNFNZUNONZU
      PFNZUPONZEHZFNVAONUNUPGPZVAGPUNUPVAGPGPQUNRZUPRZVARUNUPVASTUAUQURJUNGPUNQ
      VCUNUBUCUNUDZUQUNUOGPZUOUNGPZJUQUOFNZVFVGQZVEUQURUOONVIVHVCUORUNUOUEUFUGU
      QURVFJQVCUNUHUCUIUJFGAKLBUKFGAKLBULUQURUTVBUPUNGPQUSVCVDUNUPUEUFUM $.
      $( [4-Sep-2011] $)
  $}

