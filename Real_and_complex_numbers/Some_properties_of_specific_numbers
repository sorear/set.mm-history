  $( 2 times 2 equals 4. $)
  2t2e4 $p |- ( 2 x. 2 ) = 4 $=
    ( c2 cmul co caddc c4 2cn 2times 2p2e4 eqtr ) AABCAADCEAFGHI $.
    $( [1-Aug-1999] $) $( [11-May-2004] $)

  $( 3 times 2 equals 6. $)
  3t2e6 $p |- ( 3 x. 2 ) = 6 $=
