  $( One half of four is two. $)
  4d2e2 $p |- ( 4 / 2 ) = 2 $=
    ( c4 c2 cdiv co wceq cmul 2t2e4 4re recn 2cn 2re 2pos gt0ne0i divmul mpbir
    ) ABCDBEBBFDAEGABBAHIJJBKLMNO $.
    $( [3-Sep-1999] $)

  $( 1 is less than 2. $)
  1lt2 $p |- 1 < 2 $=
    ( c1 caddc co c2 clt 1re ltp1 df-2 breqtrr ) AAABCDEAFGHI $.
    $( [26-Feb-2005] $) $( [24-Feb-2005] $)

  $( One-half is greater than zero. $)
  halfgt0 $p |- 0 < ( 1 / 2 ) $=
    ( c2 2re 2pos recgt0i ) ABCD $.
    $( [26-Feb-2005] $) $( [24-Feb-2005] $)

  $( One-half is less than one. $)
  halflt1 $p |- ( 1 / 2 ) < 1 $=
    ( c1 cdiv co c2 clt wbr ax1cn div1 1lt2 eqbrtr 1re 2re lt01 2pos ltdiv23i
    mpbi ) AABCZDEFADBCAEFQADEAGHIJAADKKLMNOP $.
    $( [26-Feb-2005] $) $( [24-Feb-2005] $)

  $( Closure of half of a number (frequently used special case). $)
  halfclt $p |- ( A e. CC -> ( A / 2 ) e. CC ) $=
    ( cc wcel c2 cc0 wne cdiv co 2cn 2re 2pos gt0ne0i divclt mp3an23 ) ABCDBCDE
    FADGHBCIDJKLADMN $.
    $( [1-Jan-2006] $) $( [1-Jan-2006] $)

  $( Real closure of half. $)
  rehalfclt $p |- ( A e. RR -> ( A / 2 ) e. RR ) $=
    ( cr wcel c2 cc0 wne cdiv co 2re 2pos gt0ne0i redivclt mp3an23 ) ABCDBCDEFA
    DGHBCIDIJKADLM $.
    $( [2-Jan-2006] $) $( [1-Jan-2006] $)

  $( Half of a number is zero iff the number is zero. $)
  half0t $p |- ( A e. CC -> ( ( A / 2 ) = 0 <-> A = 0 ) ) $=
    ( cc wcel c2 cc0 wne cdiv co wceq wb 2cn 2re 2pos gt0ne0i diveq0t mp3an23
    ) ABCDBCDEFADGHEIAEIJKDLMNADOP $.
    $( [12-Jun-2006] $) $( [20-Apr-2006] $)

  $( A positive number is greater than its half. $)
  halfpost $p |- ( A e. RR -> ( 0 < A <-> ( A / 2 ) < A ) ) $=
    ( cr wcel cc0 clt wbr c1 caddc co cdiv c2 wb cif wceq breq2 opreq1 id
    breq12d bibi12d 0re elimel halfpos dedth df-2 opreq2i breq1i syl6bbr ) ABCZ
    DAEFZAGGHIZJIZAEFZAKJIZAEFUHUIULLDUHADMZEFZUNUJJIZUNEFZLADAUNNZUIUOULUQAUND
    EOURUKUPAUNEAUNUJJPURQRSUNADBTUAUBUCUMUKAEKUJAJUDUEUFUG $.
    $( [29-Oct-2004] $) $( [28-Oct-2004] $)

  $( A number is positive iff its half is positive. $)
  halfpos2t $p |- ( A e. RR -> ( 0 < A <-> 0 < ( A / 2 ) ) ) $=
    ( cr wcel c2 cc0 clt wbr cdiv co wb 2re 2pos gt0divt mp3an23 ) ABCDBCEDFGEA
    FGEADHIFGJKLADMN $.
    $( [3-May-2005] $) $( [10-Apr-2005] $)

  $( A number is nonnegative iff its half is nonnegative. $)
  halfnneg2t $p |- ( A e. RR -> ( 0 <_ A <-> 0 <_ ( A / 2 ) ) ) $=
    ( cr wcel c2 cc0 clt wbr cle cdiv co wb 2re 2pos ge0divt mp3an23 ) ABCDBCED
    FGEAHGEADIJHGKLMADNO $.
    $( [6-Feb-2006] $) $( [9-Dec-2005] $)

  $( Two halves make a whole. $)
  2halvest $p |- ( A e. CC -> ( ( A / 2 ) + ( A / 2 ) ) = A ) $=
    ( cc wcel c2 cmul co cdiv caddc 2timest opreq1d cc0 wne wceq 2cn 2re 2pos
    gt0ne0i divcan3t mp3an13 w3a divdirt mpan2 mp3an3 anidms 3eqtr3rd ) ABCZDAE
    FZDGFZAAHFZDGFZAADGFZUKHFZUFUGUIDGAIJDBCZUFDKLZUHAMNDOPQZDARSUFUJULMZUFUFUM
    UPNUFUFUMTUNUPUOAADUAUBUCUDUE $.
    $( [29-Apr-2005] $) $( [11-Apr-2005] $)

