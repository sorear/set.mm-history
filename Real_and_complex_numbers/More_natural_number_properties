$(
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
        More natural number properties
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
$)

  ${
    nnsqcl.1 $e |- N e. NN $.
    $( The square of a natural number is a natural number. $)
    nnsqcli $p |- ( N ^ 2 ) e. NN $=
      ( cn wcel c2 cn0 cexp co 2nn0 nnexpcl mp2an ) ACDEFDAEGHCDBIAEJK $.
      $( [20-Aug-2001] $)

    $( A natural number is less than or equal to its square. $)
    nnlesqi $p |- N <_ ( N ^ 2 ) $=
      ( c1 cmul co c2 cexp cle nncni mulid1i wbr cn wcel nnge1 ax-mp cc0 clt wb
      nngt0i 1re nnrei lemul2i mpbi sqvali breqtrri eqbrtrri ) ACDEZAAFGEZHAABI
      ZJUGAADEZUHHCAHKZUGUJHKZALMUKBANOPAQKUKULRABSCAATABUAZUMUBOUCAUIUDUEUF $.
      $( [15-Sep-1999] $)

    $( A natural number is even iff its square is even. $)
    nnesqi $p |- ( ( N / 2 ) e. NN <-> ( ( N ^ 2 ) / 2 ) e. NN ) $=
      ( c2 cdiv co cn wcel cexp cmul nnmulcl 2cn 2ne0 opreq1i eqtr3i mpan caddc
      c1 opreq2i cc0 clt anidms divcli mulassi divassi sqvali divcan2i 3eqtr4ri
      nncni 2nn syl5eqelr syl wn ax-1cn addcli binom2i mulid1i opreq12i nnsqcli
      sq1 mulcli add32i 3eqtri nnrei 1re readdcli recni divdiri divcan3i eleq1i
      3eqtr3i cmin 2re redivcli addsubassi subidi addid1i addid2i lt01 addgt0ii
      wbr nngt0i 2pos divgt0ii 0re ltadd1i mpbi eqbrtrri nnsub mpbii sylbi 3syl
      wb con3i nneoi 3imtr4i impbii ) ACDEZFGZACHEZCDEZFGZWRWQWQIEZFGZXAWRXCWQW
      QJUAXCWTCXBIEZFCWQIEZWQIEZXDWTCWQWQKACABUHZKLUBZXHUCAAIEZCDEAWQIEWTXFAACX
