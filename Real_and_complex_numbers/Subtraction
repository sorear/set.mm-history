  $( Closure law for subtraction of reals. $)
  subrclt $p |- ( ( A e. RR /\ B e. RR ) -> ( A - B ) e. RR ) $=
    ( cr wcel wa cmin co cneg caddc cc wceq subnegt recnt syl2an axaddrcl
    negrclt sylan5 eqeltrd ) ACDZBCDZEABFGZABHZIGZCAJDBJDUAUCKSTABLAMBMNSUBCDUC
    CDTAUBOBPQR $.
    $( [20-Jan-97] $)

  ${
    subrcl.1 $e |- A e. RR $.
    subrcl.2 $e |- B e. RR $.
    $( Closure law for subtraction of reals. $)
