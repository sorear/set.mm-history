      EZABFCGHZIFABCIZGHZABCJZISJZABFCDGKABUARDCLMUBTNQSLOP $.
      $( [22-Oct-2011] $) $( [1-Mar-2008] $)
  $}

  $( A negative is a set. $)
  negex $p |- -u A e. _V $=
    ( cneg cc0 cmin co cvv df-neg oprex eqeltri ) ABCADEFAGCADHI $.
