    $( An integer is its own floor. $)
    flidt $p |- ( A e. ZZ -> ( |_ ` A ) = A ) $=
      ( cz wcel cfl cfv wceq cle wbr wa cr zret fllet syl leidt wb flget
      mpancom mpbid jca letri3t flclt 3syl sylanc mpbird ) ABCZADEZAFZUFAGHZAUF
