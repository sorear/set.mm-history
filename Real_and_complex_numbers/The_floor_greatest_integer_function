    $( [13-Mar-2005] $) $( [24-Feb-2005] $)

  $( An integer is its own floor. $)
  flid $p |- ( A e. ZZ -> ( |_ ` A ) = A ) $=
    ( cz wcel cfl cfv wceq cle wbr cr wa wb letri3 zre reflcl syl sylanc flle
    leid flge mpancom mpbid mpbir2and ) ABCZADEZAFZUDAGHZAUDGHZUDICZAICZUEUFUGJ
    KUCUDALUCUIUHAMZANOUJPUCUIUFUJAQOUCAAGHZUGUCUIUKUJAROUIUCUKUGKUJAASTUAUB $.
    $( [27-Dec-2004] $) $( [15-Nov-2004] $)

  $( The floor function is idempotent. $)
  flidm $p |- ( A e. RR -> ( |_ ` ( |_ ` A ) ) = ( |_ ` A ) ) $=
    ( cr wcel cfl cfv cz wceq flcl flid syl ) ABCADEZFCKDEKGAHKIJ $.
    $( [25-Aug-2008] $) $( [17-Aug-2008] $)

  $( A real number equals its floor iff it is an integer. $)
  flidz $p |- ( A e. RR -> ( ( |_ ` A ) = A <-> A e. ZZ ) ) $=
    ( cr wcel cfl cfv wceq cz eleq1 flcl syl5cbi flid impbid1 ) ABCZADEZAFZAGCZ
    ONGCPMNAGHAIJAKL $.
    $( [27-Nov-2008] $) $( [11-Nov-2008] $)

  $( Ordering relationship for the greatest integer function. $)
  flwordi $p |- ( ( A e. RR /\ B e. RR /\ A <_ B ) ->
                 ( |_ ` A ) <_ ( |_ ` B ) ) $=
    ( cr wcel cle wbr cfl cfv wa flle adantr wi letr reflcl pm3.26 pm3.27
