                       ( G ` k ) = ( Im ` ( F ` k ) ) ) ) $.
      $( The imaginary part of a series.  (Contributed by Paul Chapman,
         9-Nov-2007.) $)
      serzim $p |- ( N e. ( ZZ> ` M ) -> ( ( <. M , + >. seq G ) ` N ) =
                     ( Im ` ( ( <. M , + >. seq F ) ` N ) ) ) $=
        ( vm cim cv caddc cop cseqz co cfv c1 imaddt serzrelem ) AIBCJDEFGHIKZD
        LMBNOPTQLOBPRS $.
        $( [10-Nov-2007] $) $( [9-Nov-2007] $)
    $}

    ${
      serzcj.3 $e |- ( k e. ( ZZ> ` M ) -> ( ( F ` k ) e. CC /\
                       ( G ` k ) = ( * ` ( F ` k ) ) ) ) $.
      $( The complex conjugate of a series.  (Contributed by Paul Chapman,
         9-Nov-2007.) $)
      serzcj $p |- ( N e. ( ZZ> ` M ) -> ( ( <. M , + >. seq G ) ` N ) =
                     ( * ` ( ( <. M , + >. seq F ) ` N ) ) ) $=
        ( vm ccj cv caddc cop cseqz co cfv c1 cjaddt serzrelem ) AIBCJDEFGHIKZD
        LMBNOPTQLOBPRS $.
        $( [10-Nov-2007] $) $( [9-Nov-2007] $)
    $}
  $}

  ${
    $d F k $.  $d G k $.
    ser0cj.1 $e |- F e. V $.
    ser0cj.2 $e |- G e. V $.
    ser0cj.3 $e |- ( k e. NN0 -> ( ( F ` k ) e. CC /\
                        ( G ` k ) = ( * ` ( F ` k ) ) ) ) $.
    $( The complex conjugate of a 0-based series. $)
    ser0cj $p |- ( N e. NN0 ->
                    ( ( + seq0 G ) ` N ) = ( * ` ( ( + seq0 F ) ` N ) ) ) $=
      ( cc0 cuz cfv wcel caddc cop cseqz co ccj wceq cn0 cseq0 cv cc wa
      elnn0uz sylbir serzcj addex seq0seqz fveq1i fveq2i eqeq12i 3imtr4 ) DHIJZ
      KDHLMZCNOZJZDUMBNOZJZPJZQDRKDLCSOZJZDLBSOZJZPJZQABCHDEFATZULKVDRKVDBJZUAK
