$(
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
        Product topologies
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
$)

  ${
    txtopiOLD.1 $e |- R e. Top $.
    txtopiOLD.2 $e |- S e. Top $.
    $( The product of two topologies is a topology.  (Moved to ~ txtopi in main
       set.mm and may be deleted by mathbox owner, JM. --NM 15-Oct-2012.) $)
    txtopiOLD $p |- ( R tX S ) e. Top $=
      ( txtopi ) ABCDE $.
      $( [15-Jun-2010] $)
  $}

  ${
    txuniiOLD.1 $e |- R e. Top $.
    txuniiOLD.2 $e |- S e. Top $.
    txuniiOLD.3 $e |- X = U. R $.
    txuniiOLD.4 $e |- Y = U. S $.
    $( The underlying set of the product of two topologies.  (Moved to ~ txunii
       in main set.mm and may be deleted by mathbox owner, JM. --NM
       15-Oct-2012.) $)
    txuniiOLD $p |- ( X X. Y ) = U. ( R tX S ) $=
      ( txunii ) ABCDEFGHI $.
      $( [15-Jun-2010] $)
  $}

  ${
    $d R u v z $.  $d S u v z $.  $d T u v z $.  $d A u v z $.  $d B u v z $.
    txopnOLD.1 $e |- T = ( R tX S ) $.
    $( The product of two open sets is open in the product topology.  (Moved to
       ~ txopn in main set.mm and may be deleted by mathbox owner, JM. --NM
       15-Oct-2012.) $)
    txopnOLD $p |- ( ( ( R e. Top /\ S e. Top ) /\ ( A e. R /\ B e. S ) )
                                                      -> ( A X. B ) e. T ) $=
      ( ctop wcel wa cxp ctx co txopn syl6eleqr ) CGHDGHIACHBDHIIABJCDKLEABCDMF
      N $.
      $( [2-Sep-2009] $)
  $}

  ${
    txcldOLD.1 $e |- T = ( R tX S ) $.
    $( The product of two closed sets is closed in the product topology.
       (Moved to ~ txcld in main set.mm and may be deleted by mathbox owner,
       JM. --NM 15-Oct-2012.) $)
    txcldOLD $p |- ( ( ( R e. Top /\ S e. Top ) /\ ( A e. ( Clsd ` R )
                  /\ B e. ( Clsd ` S ) ) ) -> ( A X. B ) e. ( Clsd ` T ) ) $=
      ( ctop wcel wa ccld cfv cxp ctx co txcld fveq2i syl6eleqr ) CGHDGHIACJKHB
      DJKHIIABLCDMNZJKEJKABCDOERJFPQ $.
      $( [2-Sep-2009] $)
  $}

