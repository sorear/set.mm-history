$(
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
                             Gamma function
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
$)

  $( Introduce new constant symbols. $)
  $c _G $. $( Gamma function (capital letter Gamma) $)

  $( The Gamma function. $)
  cgam $a class _G $.

  ${
    $d z n m $.
    $( Define the Gamma function.  This definition is attributed to Euler, and
       unlike the usual integral definition is defined on the entire complex
       plane except the nonpositive integers ` ZZ \ NN ` , where the function
       has simple poles. $)
    df-gam $a |- _G = ( z e. ( ( CC \ ZZ ) u. NN ) |-> ( ~~> ` ( n e. NN |->
      ( ( ( n ^ z ) x. ( ! ` n ) ) /
        ( seq 0 ( x. , ( m e. _V |-> ( z + m ) ) ) ` n ) ) ) ) ) $.
  $}

