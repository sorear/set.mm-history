$(
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
              Filters
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
$)


  $c FilSp $.
  cfilsp $a class FilSp $.

  ${
    $d x y a b $.
    $( Definition of a filter space. $)
    df-flsp $a |- FilSp = { <. x , y >. | ( ( x e. y /\ -. (/) e. y ) /\
      A. a e. y A. b ( ( b (_ x  /\ a (_ b ) -> b e. y ) /\
      A. a e. y A. b e. y ( a i^i b ) e. y ) } $.
  $}


