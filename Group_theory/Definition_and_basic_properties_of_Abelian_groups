$(
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
            Definition and basic properties of Abelian groups
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
$)

  $c AbelOp $.

  $( Extend class notation with the class of all Abelian group operations. $)
  cabl $a class AbelOp $.

  ${
    $d g x y $.
    $( Define the class of all Abelian group operations. $)
    df-ablo $a |- AbelOp
     = { g e. GrpOp | A. x e. ran g A. y e. ran g ( x g y ) = ( y g x ) } $.
  $}

  ${
    $d g x y G $.  $d g x y X $.
    isabl.1 $e |- X = ran G $.
    $( The predicate "is an Abelian (commutative) group operation." $)
    isablo $p |- ( G e. AbelOp <-> ( G e. GrpOp /\
             A. x e. X A. y e. X ( x G y ) = ( y G x ) ) ) $=
      ( vg cv co wceq crn wral cgr cabl wb rneq syl6eqr raleq raleqbi1dv syl
      opreq eqeq12d 2ralbidv bitrd df-ablo elrab2 ) AGZBGZFGZHZUGUFUHHZIZBUHJZK
      ZAULKZUFUGCHZUGUFCHZIZBDKADKZFCLMUHCIZUNUKBDKZADKZURUSULDIUNVANUSULCJDUHC
      OEPUMUTAULDUKBULDQRSUSUKUQABDDUSUIUOUJUPUFUGUHCTUGUFUHCTUAUBUCABFUDUE $.
      $( [2-Nov-2006] $)
  $}

  ${
    $d x y G $.
    $( An Abelian group operation is a group operation. $)
    ablogrpo $p |- ( G e. AbelOp -> G e. GrpOp ) $=
      ( vx vy cabl wcel cgr cv co wceq crn wral eqid isablo simplbi ) ADEAFEBGZ
      CGZAHPOAHICAJZKBQKBCAQQLMN $.
      $( [2-Nov-2006] $)
  $}

  ${
    $d x y A $.  $d y B $.  $d x y G $.  $d x y X $.
    ablcom.1 $e |- X = ran G $.
    $( An Abelian group operation is commutative. $)
    ablocom $p |- ( ( G e. AbelOp /\ A e. X /\ B e. X ) ->
                 ( A G B ) = ( B G A ) ) $=
      ( vx vy cabl wcel co wceq cv wral wa cgr isablo simprbi opreq1 opreq2
      eqeq12d rcla42v syl5com 3impib ) CHIZADIZBDIZABCJZBACJZKZUDFLZGLZCJZUKUJC
      JZKZGDMFDMZUEUFNUIUDCOIUOFGCDEPQUNUIAUKCJZUKACJZKFGABDDUJAKULUPUMUQUJAUKC
      RUJAUKCSTUKBKUPUGUQUHUKBACSUKBACRTUAUBUC $.
      $( [2-Nov-2006] $)

    $( Commutative/associative law for Abelian groups. $)
    abl23 $p |- ( ( G e. AbelOp /\ ( A e. X /\ B e. X /\ C e. X ) ) ->
                 ( ( A G B ) G C ) = ( ( A G C ) G B ) ) $=
      ( cabl wcel w3a wa co wceq ablocom 3adant3r1 opreq2d cgr ablogrpo
      grpoass sylan 3ancomb sylan2b 3eqtr4d ) DGHZAEHZBEHZCEHZIZJZABCDKZDKZACBD
      KZDKZABDKCDKZACDKBDKZUHUIUKADUCUEUFUIUKLUDBCDEFMNOUCDPHZUGUMUJLDQZABCDEFR
      SUCUOUGUNULLZUPUGUOUDUFUEIUQUDUEUFTACBDEFRUASUB $.
      $( [26-Apr-2007] $)

    $( Commutative/associative law for Abelian groups. $)
    abl4 $p |- ( ( G e. AbelOp /\ ( A e. X /\ B e. X ) /\ ( C e. X /\
   D e. X ) ) -> ( ( A G B ) G ( C G D ) ) = ( ( A G C ) G ( B G D ) ) ) $=
      ( cabl wcel wa co wceq w3a simprll simprlr simprrl 3jca abl23 syldan
      opreq1d cgr ablogrpo grpocl 3expb adantrr simprrr grpoass sylan adantrlr
      adantrrr 3eqtr3d 3impb ) EHIZAFIZBFIZJZCFIZDFIZJZABEKZCDEKEKZACEKZBDEKEKZ
      LUMUPUSJZJZUTCEKZDEKZVBBEKZDEKZVAVCVEVFVHDEUMVDUNUOUQMVFVHLVEUNUOUQUMUNUO
      USNUMUNUOUSOUMUPUQURPQABCEFGRSTUMEUAIZVDVGVALZEUBZVJVDUTFIZUQURMVKVJVDJZV
      MUQURVJUPVMUSVJUNUOVMABEFGUCUDUEVJUPUQURPVJUPUQURUFZQUTCDEFGUGSUHUMVJVDVI
      VCLZVLVJVDVBFIZUOURMVPVNVQUOURVJUPUQVQURVJUNUQVQUOVJUNUQVQACEFGUCUDUIUJVJ
      UNUOUSOVOQVBBDEFGUGSUHUKUL $.
      $( [26-Apr-2007] $)
  $}

  ${
    $d x y G $.  $d x y X $.
    isabli.1 $e |- G e. GrpOp $.
    isabli.2 $e |- dom G = ( X X. X ) $.
    isabli.3 $e |- ( ( x e. X /\ y e. X ) -> ( x G y ) = ( y G x ) ) $.
    $( Properties that determine an Abelian group operation. $)
    isabloi $p |- G e. AbelOp $=
      ( cabl wcel cgr cv co wceq wral grprn isablo rgen2a mpbir2an ) CHICJIAKZB
      KZCLTSCLMZBDNADNABCDCDEFOPEUAABDGQR $.
      $( [9-Apr-2008] $) $( [5-Nov-2006] $)
  $}

  ${
    abldiv.1 $e |- X = ran G $.
    abldiv.3 $e |- D = ( /g ` G ) $.
    $( Law for group multiplication and division. $)
    ablmuldiv $p |- ( ( G e. AbelOp /\ ( A e. X /\ B e. X /\ C e. X ) ) ->
     ( ( A G B ) D C ) = ( ( A D C ) G B ) ) $=
      ( cabl wcel w3a wa co wceq ablocom 3adant3r3 opreq1d 3ancoma cgr
      ablogrpo grpmuldivass sylan sylan2b simpr2 grpdivcl syl3an1 3adant3r2
      jca 3expb syldan 3eqtrd ) EIJZAFJZBFJZCFJZKZLZABEMZCDMBAEMZCDMZBACDMZEMZV
