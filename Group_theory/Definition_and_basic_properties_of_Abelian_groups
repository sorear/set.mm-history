    $( Group theory analog of ~ nnncan . $)
    ablnnncan $p |- ( ( G e. AbelOp /\ ( A e. X /\ B e. X /\ C e. X ) ) ->
      ( ( A D ( B D C ) ) D C ) = ( A D B ) ) $=
      ( cabl wcel w3a wa co wceq simpr1 cgr ablogrpo grpdivcl syl3an1
      3adant3r1 simpr3 3jca abldivdiv4 syldan grpnpcan opreq2d eqtrd ) EIJZAFJZ
