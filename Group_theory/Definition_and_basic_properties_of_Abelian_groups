    $( Group theory analog of ~ nnncan1 . $)
    ablnnncan1 $p |- ( ( G e. Abel /\ ( A e. X /\ B e. X /\ C e. X ) ) ->
         ( ( A D B ) D ( A D C ) ) = ( C D B ) ) $=
      ( cabl wcel w3a wa co wceq 3simpr1 3simpr2 cgr grpdivcl ablgrp syl3an1
      3adant3r2 3jca abldiv23 syldan ablnncan opreq1d eqtrd ) EIJZAFJZBFJZCFJZK
      ZLZABDMACDMZDMZAUNDMZBDMZCBDMUHULUIUJUNFJZKUOUQNUMUIUJURUHUIUJUKOUHUIUJUK
