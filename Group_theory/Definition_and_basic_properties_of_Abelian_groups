      PUQURUS $.
      $( [29-Feb-2008] $) $( [29-Feb-2008] $)

    $( Swap the second and third terms in a double division. $)
    abldiv23 $p |- ( ( G e. Abel /\ ( A e. X /\ B e. X /\ C e. X ) ) ->
   ( ( A D B ) D C ) = ( ( A D C ) D B ) ) $=
      ( cabl wcel w3a wa co wceq ablcom 3adant3r1 opreq2d abldivdiv4 3ancomb
      sylan2b 3eqtr4d ) EIJZAFJZBFJZCFJZKZLZABCEMZDMACBEMZDMZABDMCDMACDMBDMZUGU
      HUIADUBUDUEUHUINUCBCEFGOPQABCDEFGHRUBUCUEUDKUKUJNUFACBDEFGHRUCUDUESTUA $.
      $( [29-Feb-2008] $) $( [29-Feb-2008] $)

    $( Group theory analog of ~ nnncan . $)
    ablnnncan $p |- ( ( G e. Abel /\ ( A e. X /\ B e. X /\ C e. X ) ) ->
      ( ( A D ( B D C ) ) D C ) = ( A D B ) ) $=
      ( cabl wcel w3a wa co wceq 3simpr1 cgr grpdivcl ablgrp syl3an1 3adant3r1
      3simpr3 3jca abldivdiv4 syldan grpnpcan opreq2d eqtrd ) EIJZAFJZBFJZCFJZK
      ZLZABCDMZDMCDMZAUNCEMZDMZABDMUHULUIUNFJZUKKUOUQNUMUIURUKUHUIUJUKOUHUJUKUR
      UIEPJZUJUKURUHBCDEFGHQERZSTUHUIUJUKUAUBAUNCDEFGHUCUDUMUPBADUHUJUKUPBNZUIU
      SUJUKVAUHBCDEFGHUEUTSTUFUG $.
