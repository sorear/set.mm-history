$(
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
            Definition and basic properties of Abelian groups
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
$)

  $c Abel $.

  $( Extend class notation with the class of all Abelian group operations. $)
  cabl $a class Abel $.

  ${
    $d g x y $.
    $( Define the class of all Abelian group operations. $)
    df-abl $a |- Abel = { g e. Grp | A. x e. ran g A. y e. ran g ( x g y ) =
                 ( y g x ) } $.
  $}

  ${
    $d g x y G $.  $d g x y X $.
    isabl.1 $e |- X = ran G $.
    $( The predicate "is an Abelian (commutative) group operation." $)
    isabl $p |- ( G e. Abel <-> ( G e. Grp /\
             A. x e. X A. y e. X ( x G y ) = ( y G x ) ) ) $=
      ( vg cv co wceq crn wral cgr cabl wb rneq syl6eqr raleq1 raleqd syl
      opreq eqeq12d 2ralbidv bitrd df-abl elrab2 ) AGZBGZFGZHZUGUFUHHZIZBUHJZKZ
      AULKZUFUGCHZUGUFCHZIZBDKADKZFCLMUHCIZUNUKBDKZADKZURUSULDIUNVANUSULCJDUHCO
      EPUMUTAULDUKBULDQRSUSUKUQABDDUSUIUOUJUPUFUGUHCTUGUFUHCTUAUBUCABFUDUE $.
      $( [4-Nov-2006] $) $( [2-Nov-2006] $)
  $}

  ${
    $d x y G $.
    $( An Abelian group operation is a group operation. $)
    ablgrp $p |- ( G e. Abel -> G e. Grp ) $=
      ( vx vy cabl wcel cgr cv co wceq crn wral eqid isabl pm3.26bi ) ADEAFEBGZ
      CGZAHPOAHICAJZKBQKBCAQQLMN $.
      $( [6-Nov-2006] $) $( [2-Nov-2006] $)
  $}

  ${
    $d x y A $.  $d y B $.  $d x y G $.  $d x y X $.
    ablcom.1 $e |- X = ran G $.
    $( An Abelian group operation is commutative. $)
    ablcom $p |- ( ( G e. Abel /\ A e. X /\ B e. X ) ->
                 ( A G B ) = ( B G A ) ) $=
      ( vx vy cabl wcel co wceq wa cv wral opreq1 opreq2 eqeq12d rcla42v cgr
      isabl pm3.27bi syl5com 3impib ) CHIZADIZBDIZABCJZBACJZKZUEUFLFMZGMZCJZUKU
      JCJZKZGDNFDNZUIUDUNUIAUKCJZUKACJZKFGABDDUJAKULUPUMUQUJAUKCOUJAUKCPQUKBKUP
      UGUQUHUKBACPUKBACOQRUDCSIUOFGCDETUAUBUC $.
      $( [10-Nov-2006] $) $( [2-Nov-2006] $)

    $( Commutative/associative law for Abelian groups. $)
    abl23 $p |- ( ( G e. Abel /\ ( A e. X /\ B e. X /\ C e. X ) ) ->
                 ( ( A G B ) G C ) = ( ( A G C ) G B ) ) $=
      ( cabl wcel w3a wa co wceq ablcom 3adant3r1 opreq2d cgr grpass ablgrp
      sylan 3ancomb sylan2b 3eqtr4d ) DGHZAEHZBEHZCEHZIZJZABCDKZDKZACBDKZDKZABD
      KCDKZACDKBDKZUHUIUKADUCUEUFUIUKLUDBCDEFMNODPHZUGUMUJLUCABCDEFQDRZSUOUGUNU
      LLZUCUOUDUFUEIUQUGACBDEFQUDUEUFTUAUPSUB $.
      $( [26-Apr-2007] $) $( [26-Apr-2007] $)

    $( Commutative/associative law for Abelian groups. $)
    abl4 $p |- ( ( G e. Abel /\ ( A e. X /\ B e. X ) /\ ( C e. X /\ D e. X ) )
               -> ( ( A G B ) G ( C G D ) ) = ( ( A G C ) G ( B G D ) ) ) $=
      ( cabl wcel wa co wceq w3a simprll simprlr simprrl 3jca abl23 syldan
      opreq1d cgr grpcl 3expb adantrr simprrr grpass ablgrp sylan adantrlr
      adantrrr 3eqtr3d 3impb ) EHIZAFIZBFIZJZCFIZDFIZJZABEKZCDEKEKZACEKZBDEKEKZ
      LUMUPUSJZJZUTCEKZDEKZVBBEKZDEKZVAVCVEVFVHDEUMVDUNUOUQMVFVHLVEUNUOUQUMUNUO
      USNUMUNUOUSOUMUPUQURPQABCEFGRSTEUAIZVDVGVALZUMVJVDUTFIZUQURMVKVJVDJZVLUQU
      RVJUPVLUSVJUNUOVLABEFGUBUCUDVJUPUQURPVJUPUQURUEZQUTCDEFGUFSEUGZUHVJVDVIVC
      LZUMVJVDVBFIZUOURMVPVMVQUOURVJUPUQVQURVJUNUQVQUOVJUNUQVQACEFGUBUCUIUJVJUN
      UOUSOVNQVBBDEFGUFSVOUHUKUL $.
      $( [2-May-2007] $) $( [26-Apr-2007] $)
  $}

  ${
    $d x y G $.  $d x y X $.
    isabli.1 $e |- G e. Grp $.
    isabli.2 $e |- dom G = ( X X. X ) $.
    isabli.3 $e |- ( ( x e. X /\ y e. X ) -> ( x G y ) = ( y G x ) ) $.
    $( Properties that determine an Abelian group operation. $)
    isabli $p |- G e. Abel $=
      ( cabl wcel cgr cv co wceq wral grprn isabl rgen2a mpbir2an ) CHICJIAKZBK
      ZCLTSCLMZBDNADNABCDCDEFOPEUAABDGQR $.
      $( [9-Apr-2008] $) $( [5-Nov-2006] $)
  $}

  ${
    abldiv.1 $e |- X = ran G $.
    abldiv.3 $e |- D = ( /g ` G ) $.
    $( Law for group multiplication and division. $)
    ablmuldiv $p |- ( ( G e. Abel /\ ( A e. X /\ B e. X /\ C e. X ) ) ->
     ( ( A G B ) D C ) = ( ( A D C ) G B ) ) $=
      ( cabl wcel w3a wa co wceq ablcom 3adant3r3 opreq1d cgr grpmuldivass
      ablgrp sylan 3ancoma sylan2b 3simpr2 grpdivcl syl3an1 3adant3r2 jca
      3expb syldan 3eqtrd ) EIJZAFJZBFJZCFJZKZLZABEMZCDMBAEMZCDMZBACDMZEMZVABEM
      ZUQURUSCDULUMUNURUSNUOABEFGOPQULUNUMUOKZUTVBNZUPERJZVDVEULBACDEFGHSETZUAU
      MUNUOUBUCULUPUNVAFJZLVBVCNZUQUNVHULUMUNUOUDULUMUOVHUNVFUMUOVHULACDEFGHUEV
      GUFUGUHULUNVHVIBVAEFGOUIUJUK $.
      $( [25-Feb-2008] $) $( [15-Feb-2008] $)

    $( Law for double group division. $)
    abldivdiv $p |- ( ( G e. Abel /\ ( A e. X /\ B e. X /\ C e. X ) ) ->
    ( A D ( B D C ) ) = ( ( A D B ) G C ) ) $=
      ( cabl wcel w3a wa co cgr wceq grpdivdiv ablgrp sylan grpmuldivass
      ablmuldiv eqtr3d 3ancomb sylan2b eqtrd ) EIJZAFJZBFJZCFJZKZLABCDMDMZACBDM
      EMZABDMCEMZENJZUIUJUKOUEABCDEFGHPEQZRUEUFUHUGKZUKULOUIUEUOLACEMBDMZUKULUM
      UOUPUKOUEACBDEFGHSUNRACBDEFGHTUAUFUGUHUBUCUD $.
      $( [29-Feb-2008] $) $( [29-Feb-2008] $)

    $( Law for double group division. $)
    abldivdiv4 $p |- ( ( G e. Abel /\ ( A e. X /\ B e. X /\ C e. X ) ) ->
    ( ( A D B ) D C ) = ( A D ( B G C ) ) ) $=
      ( cabl wcel w3a wa co cgn cfv cgr wceq eqid grpdivval pm3.26 grpdivcl
      3adant3r3 3simpr3 syl3anc ablgrp sylan 3simpr1 3simpr2 grpinvcl 3simp3
      syl2an 3jca abldivdiv syldan grpdivinv syl3an1 3adant3r1 opreq2d 3eqtr2d
      ) EIJZAFJZBFJZCFJZKZLZABDMZCDMZVFCENOZOZEMZABVIDMZDMZABCEMZDMEPJZVDVGVJQZ
      UTVNVFFJZVCVOVNVDLVFCDEVHFGVHRZHSVNVDTVNVAVBVPVCABDEFGHUAUBVNVAVBVCUCUDEU
