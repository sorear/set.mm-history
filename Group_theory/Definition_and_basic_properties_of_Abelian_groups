    $( Swap the second and third terms in a double division. $)
    abldiv23 $p |- ( ( G e. AbelOp /\ ( A e. X /\ B e. X /\ C e. X ) ) ->
   ( ( A D B ) D C ) = ( ( A D C ) D B ) ) $=
      ( cabl wcel w3a wa co wceq ablocom 3adant3r1 opreq2d abldivdiv4 3ancomb
