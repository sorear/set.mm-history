$(
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
                   Posets
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
$)

  $c Base $.
  $c le $.

  $c Poset $.
  $c lt $.
  $c lub $.
  $c glb $.
  $c join $.
  $c meet $.

  $( Extend class notation with the class of all base set extractors. $)
  cbs $a class Base $.

  $( Extend class notation with less-than-or-equal for posets. $)
  cple $a class le $.

  $( Extend class notation with the class of posets. $)
  cpo $a class Poset $.

  $( Extend class notation with less-than for posets. $)
  cplt $a class lt $.

  $( Extend class notation with poset least upper bound. $)
  club $a class lub $.

  $( Extend class notation with poset greatest lower bound. $)
  cglb $a class glb $.

  $( Extend class notation with poset join. $)
  cjn $a class join $.

  $( Extend class notation with poset meet. $)
  cmee $a class meet $.

  $( Define the base set extractor for posets and related structures.  Note
     that the function argument can be any set, although it is meaningful only
     if it is a member of ` Poset ` ( ~ df-poset ) when used for posets or of
     ` Grp ` ( ~ df-grp ) when used from groups. $)
  df-base $a |- Base = ( p e. _V |-> ( p ` 1 ) ) $.

  ${
    $d p K $.
    baseval.k $e |- K e. _V $.
    $( Value of the base set extractor.  (Normally it is preferred to work with
       ` ( Base `` ndx ) ` rather than the hard-coded ` 1 ` in order to make
       structure theorems portable.  This is an example of how to obtain it
       when needed.) $)
    baseval $p |- ( Base ` K ) = ( K ` 1 ) $=
      ( vs cbs c1 df-base strfvn ) ADECBCFG $.
      $( [4-Sep-2011] $)
  $}

  $( Utility theorem: index-independent form of ~ df-base . $)
  baseid $p |- Base = ( f e. _V |-> ( f ` ( Base ` ndx ) ) ) $=
    ( cbs c1 df-base 1nn ndxid ) BCAADEF $.
    $( [20-Oct-2012] $)

  $( Index value of the base set extractor.  (Normally it is preferred to work
     with ` ( Base `` ndx ) ` rather than the hard-coded ` 1 ` in order to make
     structure theorems portable.  This is an example of how to obtain it when
     needed.) $)
  basendx $p |- ( Base ` ndx ) = 1 $=
    ( vs cbs c1 df-base 1nn ndxarg ) BCAADEF $.
    $( [2-Aug-2013] $)

  $( Def. 8.4.2 p. 204. $)
  $( Define less-than-or-equal ordering extractor for posets and related
     structures.  We use ` 10 ` for the index to avoid conflict with ` 1 `
     through ` 9 ` used for other purposes. $)
  df-ple $a |- le = ( p e. _V |-> ( p ` 10 ) ) $.

  $( Utility theorem: self-referencing, index-independent form of ~ df-ple . $)
  pleid $p |- le = ( f e. _V |-> ( f ` ( le ` ndx ) ) ) $=
    ( cple c10 df-ple 10nn ndxid ) BCAADEF $.
    $( [9-Nov-2012] $)

  $( Utility lemma for constructing a (2-element) poset structure without
     direct reference to component indices.  This lemma lets us add a second
     element to a singleton using ~ fnunsn . $)
  poslem $p |- -. ( le ` ndx ) e. { ( Base ` ndx ) } $=
    ( vs cnx cple cfv cbs csn wcel wceq wne wn c10 df-ple 10nn ndxarg c1 1re
    10re 1lt10 ltneii basendx neeqtrri eqnetri df-ne mpbi elsni mto ) BCDZBEDZF
    GUGUHHZUGUHIUIJUGKUHCKAALMNKOUHOKPQRSTUAUBUGUHUCUDUGUHUEUF $.
    $( [1-Oct-2013] $)

  ${
    posfn.g $e |- P = { <. ( Base ` ndx ) , B >. , <. ( le ` ndx ) , L >. } $.
    ${
      posfn.d $e |- D = { ( Base ` ndx ) , ( le ` ndx ) } $.
      $( A constructed poset is a function with domain ` D ` .  (We include the
         domain for use with later structures that extend the domain.) $)
      posfn $p |- P Fn D $=
        ( cnx cbs cfv csn cop cple fvex fnsn cpr cun df-pr eqtri poslem fnunsn
        ) GHIZJZBUAAKZJZCGLIZDGLMUAAGHMNCUCUEDKZOUDUFJPEUCUFQRBUAUEOUBUEJPFUAUE
        QRST $.
        $( [4-Oct-2013] $)
    $}

    $( The base set of a constructed poset. $)
    posbase $p |- ( B e. V -> B = ( Base ` P ) ) $=
      ( vs cbs cnx cfv cop cple cpr cvv prex eqeltri wfn wfun eqid posfn fnfun
      ax-mp baseid opex prid1 eleqtrri strfv ) ABGDFBHGIZAJZHKIZCJZLZMEUHUJNOBU
      GUILZPBQAULBCEULRSULBTUAFUBUHUKBUHUJUGAUCUDEUEUF $.
      $( [4-Oct-2013] $)

    $( The order relation of a constructed poset. $)
    posle $p |- ( L e. V -> L = ( le ` P ) ) $=
      ( vs cple cnx cbs cfv cop cpr cvv prex eqeltri wfn wfun eqid posfn fnfun
      ax-mp pleid opex prid2 eleqtrri strfv ) CBGDFBHIJZAKZHGJZCKZLZMEUHUJNOBUG
      UILZPBQAULBCEULRSULBTUAFUBUJUKBUHUJUICUCUDEUEUF $.
      $( [4-Oct-2013] $)
  $}

  ${
    $d f b r x y z $.
    $( Def. 8.4.1 p. 203. $)
    $( Define the class of posets.  Definition of poset in [Crawley] p. 1.
       Note that Crawley-Dilworth require that a poset base set be nonempty,
       but we follow the convention of most authors who don't make this a
       requirement. $)
    df-poset $a |- Poset = { f | E. b E. r
              ( b = ( Base ` f )
               /\ r = ( le ` f )
              /\ A. x e. b A. y e. b A. z e. b ( x r x
                 /\ ( ( x r y /\ y r x ) -> x = y )
                 /\ ( ( x r y /\ y r z ) -> x r z ) ) ) } $.
  $}

  ${
    $d b p r x y z B $.  $d b p r K $.  $d b p r x y z L $.
    ispos.b $e |- B = ( Base ` K ) $.
    ispos.l $e |- L = ( le ` K ) $.
    $( The predicate "is a poset." $)
    ispos $p |- ( K e. Poset <-> ( K e. _V
            /\ A. x e. B A. y e. B A. z e. B ( x L x
                 /\ ( ( x L y /\ y L x ) -> x = y )
                 /\ ( ( x L y /\ y L z ) -> x L z ) ) ) ) $=
      ( vb vr vp cvv wcel cv wceq wbr wa wi w3a wral wex cpo cbs cfv fvex
      eqeltri cple raleq raleqbi1dv breq anbi12d imbi1d imbi12d 3anbi123d
      ralbidv 2ralbidv ceqsex2v anbi2i fveq2 syl6eqr eqeq2d 3anbi12d 2exbidv
      df-poset elab4g biid 3bitr4i ) ELMZINZDOZJNZFOZANZVMVKPZVMBNZVKPZVOVMVKPZ
      QZVMVOOZRZVPVOCNZVKPZQZVMWAVKPZRZSZCVITZBVITZAVITZSZJUAIUAZQVHVMVMFPZVMVO
      FPZVOVMFPZQZVSRZWMVOWAFPZQZVMWAFPZRZSZCDTZBDTADTZQZEUBMXDWKXCVHWIWFCDTZBD
      TZADTXCIJDFDEUCUDZLGEUCUEUFFEUGUDZLHEUGUEUFWHXFAVIDWGXEBVIDWFCVIDUHUIUIVL
      XEXBABDDVLWFXACDVLVNWLVTWPWEWTVMVMVKFUJVLVRWOVSVLVPWMVQWNVMVOVKFUJZVOVMVK
      FUJUKULVLWCWRWDWSVLVPWMWBWQXIVOWAVKFUJUKVMWAVKFUJUMUNUOUPUQURVIKNZUCUDZOZ
      VKXJUGUDZOZWISZJUAIUAWKKEUBXJEOZXOWJIJXPXLVJXNVLWIXPXKDVIXPXKXGDXJEUCUSGU
      TVAXPXMFVKXPXMXHFXJEUGUSHUTVAVBVCABCKJIVDVEXDVFVG $.
      $( [4-Nov-2013] $) $( [18-Oct-2012] $)
  $}

  ${
    $d p x y z B $.  $d p K $.  $d p x y z L $.  $d x y z X $.  $d y z Y $.
    $d z Z $.
    posi.b $e |- B = ( Base ` K ) $.
    posi.l $e |- L = ( le ` K ) $.
    $( Lemma for poset properties. $)
    posi $p |- ( ( K e. Poset /\ ( X e. B /\ Y e. B /\ Z e. B ) )
                -> ( X L X
                 /\ ( ( X L Y /\ Y L X ) -> X = Y )
                 /\ ( ( X L Y /\ Y L Z ) -> X L Z ) ) ) $=
      ( vx vy vz cpo wcel cv wbr wa wceq wi w3a wral cvv ispos simprbi breq1
      breq2 bitrd anbi12d eqeq1 imbi12d biidd 3anbi123d eqeq2 anbi2d rcla43v
      mpan9 ) BLMZINZUQCOZUQJNZCOZUSUQCOZPZUQUSQZRZUTUSKNZCOZPZUQVECOZRZSZKATJA
      TIATZDAMEAMFAMSDDCOZDECOZEDCOZPZDEQZRZVMEFCOZPZDFCOZRZSZUPBUAMVKIJKABCGHU
      BUCVJWBVLDUSCOZUSDCOZPZDUSQZRZWCVFPZDVECOZRZSVLVQVMEVECOZPZWIRZSIJKDEFAAA
      UQDQZURVLVDWGVIWJWNURDUQCOVLUQDUQCUDUQDDCUEUFWNVBWEVCWFWNUTWCVAWDUQDUSCUD
      ZUQDUSCUEUGUQDUSUHUIWNVGWHVHWIWNUTWCVFVFWOWNVFUJUGUQDVECUDUIUKUSEQZVLVLWG
      VQWJWMWPVLUJWPWEVOWFVPWPWCVMWDVNUSEDCUEZUSEDCUDUGUSEDULUIWPWHWLWIWIWPWCVM
      VFWKWQUSEVECUDUGWPWIUJUIUKVEFQZVLVLVQVQWMWAWRVLUJWRVQUJWRWLVSWIVTWRWKVRVM
      VEFECUEUMVEFDCUEUIUKUNUO $.
      $( [11-Sep-2011] $)

    $( A poset ordering is reflexive. $)
    posref $p |- ( ( K e. Poset /\ X e. B ) -> X L X ) $=
      ( cpo wcel wa wbr wceq wi w3a id 3jca posi sylan2 simp1 syl ) BGHZDAHZIDD
      CJZUBUBIZDDKLZUCUBLZMZUBUATUAUAUAMUFUAUAUAUAUANZUGUGOABCDDDEFPQUBUDUERS
      $.
      $( [11-Sep-2011] $)

    $( A poset ordering is asymetric. $)
    posasymb $p |- ( ( K e. Poset /\ X e. B /\ Y e. B )
                -> ( ( X L Y /\ Y L X ) <-> X = Y ) ) $=
      ( cpo wcel w3a wbr wa wceq wi simp1 simp2 simp3 posi syl13anc syl posref
      breq2 syl5ibcom breq1 jcad 3adant3 impbid ) BHIZDAIZEAIZJZDECKZEDCKZLZDEM
      ZUKDDCKZUNUONZULEECKLULNZJZUQUKUHUIUJUJUSUHUIUJOUHUIUJPUHUIUJQZUTABCDEEFG
      RSUPUQURPTUHUIUOUNNUJUHUILZUOULUMVAUPUOULABCDFGUAZDEDCUBUCVAUPUOUMVBDEDCU
      DUCUEUFUG $.
      $( [21-Oct-2011] $)

    $( A poset ordering is transitive. $)
    postr $p |- ( ( K e. Poset /\ ( X e. B /\ Y e. B /\ Z e. B ) )
                -> ( ( X L Y /\ Y L Z ) -> X L Z ) ) $=
      ( cpo wcel w3a wa wbr wceq wi posi simp3d ) BIJDAJEAJFAJKLDDCMDECMZEDCMLD
      ENOREFCMLDFCMOABCDEFGHPQ $.
      $( [11-Sep-2011] $)
  $}

  ${
    $d p x y z B $.  $d p K $.  $d p x y z L $.
    isposi.k $e |- K e. _V $.
    isposi.b $e |- B = ( Base ` K ) $.
    isposi.l $e |- L = ( le ` K ) $.
    isposi.1 $e |- B =/= (/) $.
    isposi.2 $e |- ( x e. B -> x L x ) $.
    isposi.3 $e |- ( ( x e. B /\ y e. B ) ->
                   ( ( x L y /\ y L x ) -> x = y ) ) $.
    isposi.4 $e |- ( ( x e. B /\ y e. B /\ z e. B ) ->
                   ( ( x L y /\ y L z ) -> x L z ) ) $.
    $( Properties that determine a poset (implicit structure version). $)
    isposi $p |- K e. Poset $=
      ( cpo wcel cvv cv wbr wa wceq wi w3a wral ispos 3ad2ant1 3adant3 3jca
      rgen3 mpbir2an ) ENOEPOAQZUJFRZUJBQZFRZULUJFRSUJULTUAZUMULCQZFRSUJUOFRUAZ
      UBZCDUCBDUCADUCABCDEFHIUDGUQABCDDDUJDOZULDOZUODOZUBUKUNUPURUSUKUTKUEURUSU
      NUTLUFMUGUHUI $.
      $( [11-Sep-2011] $)
  $}

  ${
    $d p x y z B $.  $d p K $.  $d p x y z L $.
    isposix.a $e |- B e. _V $.
    isposix.b $e |- L e. _V $.
    isposix.k $e |- K = { <. ( Base ` ndx ) , B >. ,
         <. ( le ` ndx ) , L >. } $.
    isposix.1 $e |- B =/= (/) $.
    isposix.2 $e |- ( x e. B -> x L x ) $.
    isposix.3 $e |- ( ( x e. B /\ y e. B ) ->
                   ( ( x L y /\ y L x ) -> x = y ) ) $.
    isposix.4 $e |- ( ( x e. B /\ y e. B /\ z e. B ) ->
                   ( ( x L y /\ y L z ) -> x L z ) ) $.
    $( Properties that determine a poset (explicit structure version).  Note
       that the numeric indices of the structure components are not mentioned
       explicitly in either the theorem or its proof. $)
    isposix $p |- K e. Poset $=
      ( cnx cbs cfv cop cple cpr cvv prex eqeltri wcel wceq posbase ax-mp
      posle isposi ) ABCDEFENOPDQZNRPFQZSTIUIUJUAUBDTUCDEOPUDGDEFTIUEUFFTUCFERP
      UDHDEFTIUGUFJKLMUH $.
      $( [9-Nov-2012] $)
  $}

  $( Def. 8.4.3 p. 204. $)
  $( Define less-than ordering for posets and related structures.  Unlike
     ~ df-base and ~ df-ple , this is a derived component extractor and not an
     extensible structure component extractor that defines the poset. $)
  df-plt $a |- lt = ( p e. _V |-> ( ( le ` p ) \ _I ) ) $.

  ${
    $d p K $.
    pltval.l $e |- L = ( le ` K ) $.
    pltval.s $e |- S = ( lt ` K ) $.
    $( Less-than relation.  (Def. ~ df-pss analog.) $)
    pltval $p |- ( ( K e. A /\ X e. B /\ Y e. C )
        -> ( X S Y <-> ( X L Y /\ X =/= Y ) ) ) $=
      ( vp wcel wbr wne wa wb cple cfv cid cdif cplt cvv wceq elisset cv fveq2
      difeq1d df-plt fvex difexg ax-mp fvmpt syl syl5eq breqd wn difeq1i breqi
      brdif bitr3i ideqg necon3bbid adantl anbi2d syl5bb sylan9bb 3impb ) EALZG
      BLZHCLZGHDMZGHFMZGHNZOZPVHVKGHEQRZSTZMZVIVJOZVNVHDVPGHVHDEUARZVPJVHEUBLVS
      VPUCEAUDKEKUEZQRZSTVPUBUAVTEUCWAVOSVTEQUFUGKUHVOUBLVPUBLEQUIVOSUBUJUKULUM
      UNUOVQVLGHSMZUPZOZVRVNVQGHFSTZMWDGHWEVPFVOSIUQURGHFSUSUTVRWCVMVLVJWCVMPVI
      VJWBGHGHCVAVBVCVDVEVFVG $.
      $( [12-Oct-2011] $)

    $( Less-than implies less-than-or-equal.  (Th. ~ pssss analog.) $)
    pltle $p |- ( ( K e. A /\ X e. B /\ Y e. C ) -> ( X S Y -> X L Y ) ) $=
      ( wcel w3a wbr wne pltval simprbda ex ) EAKGBKHCKLZGHDMZGHFMZRSTGHNABCDEF
      GHIJOPQ $.
      $( [4-Dec-2011] $)
  $}

  ${
    pltne.s $e |- S = ( lt ` K ) $.
    $( Less-than relation.  (Def. ~ df-pss analog.) $)
    pltne $p |- ( ( K e. A /\ X e. B /\ Y e. C )
        -> ( X S Y -> X =/= Y ) ) $=
      ( wcel w3a wbr wne cple cfv eqid pltval simplbda ex ) EAIFBIGCIJZFGDKZFGL
      ZSTFGEMNZKUAABCDEUBFGUBOHPQR $.
      $( [2-Dec-2011] $)

    $( The less-than relation is not reflexive.  (Th. ~ pssirr analog.) $)
    pltirr $p |- ( ( K e. A /\ X e. B ) -> -. X S X ) $=
      ( wcel wa wceq wbr wn eqid wne wi pltne 3anidm23 necon2bd mpi ) DAGZEBGZH
      ZEEIEECJZKELUAUBEESTUBEEMNABBCDEEFOPQR $.
      $( [7-Feb-2012] $)
  $}

  ${
    pleval2.b $e |- B = ( Base ` K ) $.
    pleval2.l $e |- L = ( le ` K ) $.
    pleval2.s $e |- S = ( lt ` K ) $.
