      $( [5-Sep-2009] $)
  $}

  ${
    flimelbas.1 $e |- X = U. J $.
    flimelbas.2 $e |- Y = U. F $.
    $( A limit point of a filter belongs to its base set.  (Contributed by Jeff
       Hankins, 4-Sep-2009.) $)
    flimelbas $p |- ( ( ( J e. Top /\ F e. Fil /\ X = Y ) /\ A e. ( ( fLim ` J
    ) ` F ) ) -> A e. X ) $=
      ( ctop wcel cfil wceq w3a cflim cfv csn cnei wss elflim simprbda ) CHIBJI
