$(
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
              Connectedness
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
$)

  $c Con $.
  $( Extend class notation with the the class of all connected topologies. $)
  ccon $a class Con $.

  $( Topologies are connected when only ` (/) ` and ` U. j ` are both open and
     closed. $)
  df-con $a |- Con = { j e. Top | ( j i^i ( Clsd ` j ) ) = { (/) , U. j } } $.

  ${
    $d J j $.
    $( The predicate ` J ` is a connected topology .  (Contributed by FL,
       17-Nov-2008.) $)
    iscon $p |- ( J e. Top -> ( J e. Con <-> ( J i^i ( Clsd ` J ) ) =
      { (/) , U. J } ) ) $=
      ( vj ccon wcel ctop ccld cfv cin c0 cuni cpr wceq cv fveq2 ineq12d preq2d
      id unieq eqeq12d df-con elrab2 baib ) ACDAEDAAFGZHZIAJZKZLZBMZUHFGZHZIUHJ
      ZKZLUGBAECUHALZUJUDULUFUMUHAUIUCUMQUHAFNOUMUKUEIUHARPSBTUAUB $.
      $( [1-Dec-2010] $) $( [16-Nov-2008] $)

    $( The predicate ` J ` is a connected topology .  (Contributed by FL,
       17-Nov-2008.) $)
    iscon2 $p |- ( J e. Con <-> ( J e. Top /\ ( J i^i ( Clsd ` J ) ) =
      { (/) , U. J } ) ) $=
      ( vj cv ccld cfv cin c0 cuni wceq ctop ccon id fveq2 ineq12d unieq preq2d
      cpr eqeq12d df-con elrab2 ) BCZUADEZFZGUAHZQZIAADEZFZGAHZQZIBAJKUAAIZUCUG
      UEUIUJUAAUBUFUJLUAADMNUJUDUHGUAAOPRBST $.
      $( [1-Dec-2010] $) $( [16-Nov-2008] $)

  $}

  ${
    $d J x y $.  $d X y $.
    usinuniop.1 $e |- X = U. J $.
