$(
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
                      The greatest common divisor operator
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
$)

  $c gcd $.

  $( Extend the definition of a class to include the greatest common divisor
     operator. $)
  cgcd $a class gcd $.

  ${
    $d n x y z $.
    $( Define the ` gcd ` operator. $)
    df-gcd $a |- gcd = { <. <. x , y >. , z >. | ( ( x e. ZZ /\ y e. ZZ ) /\
                         z = if ( ( x = 0 /\ y = 0 ) , 0 ,
                             sup ( { n e. ZZ |
                                   ( n || x /\ n || y ) } , RR , < ) ) ) } $.
  $}

  ${
