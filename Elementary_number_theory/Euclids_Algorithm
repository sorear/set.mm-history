      eucalginv $p |- ( X e. ( NN0 X. NN0 ) ->
                        ( gcd ` ( E ` X ) ) = ( gcd ` X ) ) $=
        ( vm vn cn0 cxp wcel cv cop wceq wrex cfv cgcd elxp2 wa fveq2 fveq2d
        eqeq12d cc0 cmo co cif eucalgval2 iftrue sylan9eq wn iffalse cz cn
