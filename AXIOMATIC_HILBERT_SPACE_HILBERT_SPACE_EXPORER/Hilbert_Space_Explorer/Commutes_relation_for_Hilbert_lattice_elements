    $( A Hilbert lattice element commutes with its join. $)
    cmj1i $p |- A C_H ( A vH B ) $=
      ( chj co chjcli chub1i lecmii ) AABEFCABCDGABCDHI $.
      $( [7-Aug-2004] $)

    $( A Hilbert lattice element commutes with its join. $)
    cmj2i $p |- B C_H ( A vH B ) $=
      ( chj co chjcli chub2i lecmii ) BABEFDABCDGBADCHI $.
      $( [7-Aug-2004] $)

