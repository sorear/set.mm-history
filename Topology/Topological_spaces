    $( A standard textbook definition of a topological space. $)
    istps4 $p |- ( <. A , J >. e. TopSp <-> ( ( J C_ ~P A /\ (/) e. J /\
       A e. J ) /\ ( A. x ( x C_ J -> U. x e. J ) /\ A. x ( ( x C_ J /\
       x =/= (/) /\ x e. Fin ) -> |^| x e. J ) ) ) ) $=
      ( vy cop ctps wcel cpw wss c0 w3a cv cuni wi wal cin wral wa wne cfn
      cint istps3 fiint anbi2i bitri ) BCEFGCBHIJCGBCGKZALZCIZUGMCGNAOZUGDLPCGD
      CQACQZRZRUFUIUHUGJSUGTGKUGUACGNAOZRZRADBCUBUKUMUFUJULUIADCUCUDUDUE $.
      $( [30-Dec-2008] $) $( [19-Jul-2006] $)

    $( A standard textbook definition of a topological space ` <. A , J >. ` :
       a topology on ` A ` is a collection ` J ` of subsets of ` A ` such that
       ` (/) ` and ` A ` are in ` J ` and that is closed under union and finite
       intersection.  Definition of topological space in [Munkres] p. 76. $)
    istps5 $p |- ( <. A , J >. e. TopSp <-> ( ( A. x e. J x C_ A /\ (/) e. J
                 /\ A e. J ) /\ ( A. x ( x C_ J -> U. x e. J ) /\
           A. x ( ( x C_ J /\ x =/= (/) /\ x e. Fin ) -> |^| x e. J ) ) ) ) $=
      ( cop ctps wcel cpw wss c0 w3a cv cuni wi wal wne cfn cint wa wral
      istps4 pwssb 3anbi1i anbi1i bitri ) BCDEFCBGHZICFZBCFZJZAKZCHZUILCFMANUJU
      IIOUIPFJUIQCFMANRZRUIBHACSZUFUGJZUKRABCTUHUMUKUEULUFUGACBUAUBUCUD $.
      $( [23-Apr-2009] $) $( [19-Jul-2006] $)
