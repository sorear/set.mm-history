$(
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
                     Topological spaces
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
$)

  $( Declare new constant symbols and define their syntactical properties. $)

  $c Top $.
  $c TopSpOLD $.
  $c TopSp $.
  $c TopOpen $.
  $c TopBases $.
  $c topGen $.

  $( Extend class notation with the class of all topologies. $)
  ctop $a class Top $.

  $( Extend class notation with the class of all topological spaces. $)
  ctpsOLD $a class TopSpOLD $.

  $( Extend class notation with the topology component of a topological
     space. $)
  cts $a class TopOpen $.

  $( Extend class notation with the class of all topological spaces. $)
  ctps $a class TopSp $.

  $( Extend class notation with the class of all topological bases. $)
  ctb $a class TopBases $.

  $( Extend class notation with a function that converts a basis to its
     corresponding topology. $)
  ctg $a class topGen $.

  ${
    $d x y z w v $.
    $( Define the (proper) class of all topologies.  See ~ istop2g for an
       alternate way to express finite intersection and ~ istps5OLD for a
       standard definition in terms of both members of a topological space. $)
    df-top $a |- Top = { x | ( A. y ( y C_ x -> U. y e. x ) /\
                           A. y e. x A. z e. x ( y i^i z ) e. x ) } $.

    $( Define the class of all topological spaces, each of which is an ordered
       pair the second of which is a topology on the first.  See ~ istps5OLD
       for a standard way to express a topological space. $)
    df-topspOLD $a |- TopSpOLD = { <. x , y >. | ( y e. Top /\ x = U. y ) } $.

    $( Define the class of all topological bases.  Equivalent to definition of
       basis in [Munkres] p. 78 (see ~ isbasis2g ).  Note that "bases" is the
       plural of "basis." $)
    df-bases $a |- TopBases = { x | A. y e. x A. z e. x ( y i^i z ) C_
                      U. ( x i^i ~P ( y i^i z ) ) } $.

    $( Define a function that converts a basis to its corresponding topology.
       Equivalent to the definition of a topology generated by a basis in
       [Munkres] p. 78 (see ~ tgval2 ).  See ~ tgval3 for an alternate
       expression for the value. $)
    df-topgen $a |- topGen = { <. x , y >. | ( x e. TopBases /\ y =
       { z | z C_ U. ( x i^i ~P z ) } ) } $.
  $}

  $( Define the topology component of a topological space (structure). $)
  df-topset $a |- TopOpen = ( f e. _V |-> ( f ` 9 ) ) $.

  $( Utility theorem: index-independent form of ~ df-topset . $)
  topsetid $p |- TopOpen = ( f e. _V |-> ( f ` ( TopOpen ` ndx ) ) ) $=
    ( cts c9 df-topset 9nn ndxid ) BCAADEF $.
    $( [20-Oct-2012] $)

  $( Utility lemma for constructing topological spaces without direct reference
     to the actual component indices. $)
  tpslem $p |- -. ( TopOpen ` ndx ) e. { ( Base ` ndx ) } $=
    ( vs cnx cts cfv cbs csn wcel wceq wne wn c9 df-topset 9nn ndxarg c1 1re
    9re 1lt9 ltneii basendx neeqtrri eqnetri df-ne mpbi elsni mto ) BCDZBEDZFGU
    GUHHZUGUHIUIJUGKUHCKAALMNKOUHOKPQRSTUAUBUGUHUCUDUGUHUEUF $.
    $( [2-Oct-2013] $)

  ${
    tpsfn.k $e |- K
         = { <. ( Base ` ndx ) , B >. , <. ( TopOpen ` ndx ) , J >. } $.
    ${
      tpsfn.d $e |- D = { ( Base ` ndx ) , ( TopOpen ` ndx ) } $.
      $( A constructed topology is a function. $)
      tpsfn $p |- K Fn D $=
        ( cnx cbs cfv csn cop cts fvex fnsn cpr cun df-pr eqtri tpslem fnunsn
        ) GHIZJZBUAAKZJZDGLIZCGLMUAAGHMNDUCUECKZOUDUFJPEUCUFQRBUAUEOUBUEJPFUAUE
        QRST $.
        $( [28-Sep-2013] $)
    $}

    $( The base set of a constructed topology. $)
    tpsbase $p |- ( B e. V -> B = ( Base ` K ) ) $=
      ( vs cbs cnx cfv cop cts cpr cvv prex eqeltri wfn wfun eqid tpsfn fnfun
      ax-mp baseid opex prid1 eleqtrri strfv ) ACGDFCHGIZAJZHKIZBJZLZMEUHUJNOCU
      GUILZPCQAULBCEULRSULCTUAFUBUHUKCUHUJUGAUCUDEUEUF $.
      $( [2-Oct-2013] $)

    $( The open sets of a constructed topology. $)
    tpstopset $p |- ( J e. V -> J = ( TopOpen ` K ) ) $=
      ( vs cts cnx cbs cfv cop cpr cvv prex eqeltri wfn wfun eqid tpsfn fnfun
      ax-mp topsetid opex prid2 eleqtrri strfv ) BCGDFCHIJZAKZHGJZBKZLZMEUHUJNO
      CUGUILZPCQAULBCEULRSULCTUAFUBUJUKCUHUJUIBUCUDEUEUF $.
      $( [2-Oct-2013] $)
  $}

  $( Define the class of all topological spaces (structures). $)
  df-topsp $a |- TopSp = { f | ( ( TopOpen ` f ) e. Top
      /\ ( Base ` f ) = U. ( TopOpen ` f ) ) } $.

  ${
    $d x y z J $.
    $( Express the predicate " ` J ` is a topology."  Note:  In the literature,
       a topology is often represented by a script letter T, which resembles
       the letter J. This confusion has led to J being used by some authors -
       e.g.  K. D. Joshi, _Introduction to General Topology_ (1983), p. 114 -
       and it is convenient for us since we later use ` T ` to represent linear
       transformations (operators).  (Contributed by Stefan Allan,
       3-Mar-2006.) $)
    istopg $p |- ( J e. A -> ( J e. Top <-> ( A. x ( x C_ J -> U. x e. J )
                  /\ A. x e. J A. y e. J ( x i^i y ) e. J ) ) ) $=
      ( vz cv wss cuni wcel wi wal cin wral wa ctop wceq sseq2 eleq2 imbi12d
      albidv raleqbi1dv anbi12d df-top elab2g ) AFZEFZGZUEHZUFIZJZAKZUEBFLZUFIZ
      BUFMZAUFMZNUEDGZUHDIZJZAKZULDIZBDMZADMZNEDOCUFDPZUKUSUOVBVCUJURAVCUGUPUIU
      QUFDUEQUFDUHRSTUNVAAUFDUMUTBUFDUFDULRUAUAUBEABUCUD $.
      $( [3-Mar-2006] $)

    $( Express the predicate " ` J ` is a topology," using "the intersection of
       the elements of any finite subcollection" instead of the intersection of
       any two elements. $)
    istop2g $p |- ( J e. A -> ( J e. Top <-> ( A. x ( x C_ J -> U. x e. J )
         /\ A. x ( ( x C_ J /\ x =/= (/) /\ x e. Fin ) -> |^| x e. J ) ) ) ) $=
      ( vy wcel ctop cv wss cuni wi wal cin wral wa c0 wne cfn w3a cint istopg
      fiint anbi2i syl6bb ) CBECFEAGZCHZUDICEJAKZUDDGLCEDCMACMZNUFUEUDOPUDQERUD
      SCEJAKZNADBCTUGUHUFADCUAUBUC $.
      $( [23-Dec-2008] $) $( [19-Jul-2006] $)
  $}

