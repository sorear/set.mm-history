    $( Express the predicate "is a topological space." $)
    istps2 $p |- ( <. A , J >. e. TopSp <-> ( ( J e. Top /\ J C_ ~P A )
                  /\ ( (/) e. J /\ A e. J ) ) ) $=
      ( ctop wcel cuni wceq wa cpw wss c0 cop ctps eqimss adantl 0opn adantr
      pm3.27 eqid topopn eqeltrrd jca32 ex unissel adantrl impbid1 eqcom
