    $( Define a function on topologies whose value is a map from a subset to
       its neighborhoods. $)
    df-nei $a |- nei = { <. j , y >. | ( j e. Top /\ y = { <. z , v >. |
                         ( z C_ U. j /\ v = { w | ( w C_ U. j /\
                  E. g e. j ( z C_ g /\ g C_ w ) ) } ) } ) } $.
  $}

