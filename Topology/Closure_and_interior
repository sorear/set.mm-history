      $( [11-Nov-2013] $) $( [10-Sep-2006] $)
  $}

  $( The empty set is closed.  Part of Theorem 6.1(1) of [Munkres] p. 93. $)
  0cld $p |- ( J e. Top -> (/) e. ( Clsd ` J ) ) $=
