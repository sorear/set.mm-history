$(
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
        Planar incidence geometry
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
$)

  ${
    $d L a b l x $.  $d P a b x $.
    efp.1 $e |- P = U. L $.
    $( Euclid's first postulate.  There is a unique line passing through two
       distinct points. $)
    efp $p |- ( L e. Plig -> A. a e. P A. b e. P ( a =/= b
        -> E! l e. L ( a e. l /\ b e. l ) ) ) $=
      ( vx cplig wcel cv wne wa wreu wi wral w3a wrex wn isplig ibi simp1d ) BH
      IZCJZDJZKZUCEJZIZUDUFIZLEBMNDAOCAOZUEUGUHPDAQCAQEBOZUGUHGJUFIPREBOGAQDAQC
      AQZUBUIUJUKPHABCDGEFSTUA $.
      $( [3-Aug-2009] $) $( [2-Aug-2009] $)

  $}

  ${
    $d A a b l $.  $d B b l $.  $d L a b l $.  $d P a b $.
    efp2.1 $e |- P = U. L $.
    $( Euclid's first postulate.  There is a unique line passing through two
       distinct points. $)
    efp2 $p |- ( ( L e. Plig /\ A e. P /\ B e. P ) -> ( A =/= B
        -> E! l e. L ( A e. l /\ B e. l ) ) ) $=
      ( va vb cplig wcel wne cv wa wreu wi wral efp wceq neeq1 eleq1 anbi1d
      reubidv imbi12d neeq2 anbi2d rcla42v ex com3r syl 3imp ) DIJZACJZBCJZABKZ
