      $( [3-Aug-2009] $) $( [2-Aug-2009] $)
  $}

  ${
    $d L a b l x $.  $d P a b x $.
    l2p.1 $e |- P = U. L $.
    $( Any line has at least two distinct points. $)
    l2p $p |- ( L e. Plig -> A. l e. L E. a e. P E. b e. P
       ( a =/= b /\ a e. l /\ b e. l ) ) $=
      ( vx cplig wcel cv wne wa wreu wi wral w3a wrex wn isplig ibi simp2d ) BH
      IZCJZDJZKZUCEJZIZUDUFIZLEBMNDAOCAOZUEUGUHPDAQCAQEBOZUGUHGJUFIPREBOGAQDAQC
      AQZUBUIUJUKPHABCDGEFSTUA $.
      $( [3-Aug-2009] $) $( [2-Aug-2009] $)
  $}

  $c line $.

  $( Extend class notation to include a function whose value is the line. $)
  cline $a class line $.

  ${
    $d x y p q l $.
    $( If ` x ` is a planar incidence geometry, and ` p ` and ` q ` are two
       points of the plane, ` ( ( line `` x ) `` <. p , q >. ) ` is the line
       passing through ` p ` and ` q ` . $)
    df-line $a |- line = { <. x , y >. | ( x e. Plig /\ y = { <. <. p ,
       q >. , l >. | ( ( p e. U. x /\ q e. U. x ) /\ ( p =/= q /\ ( l
       e. x /\ p e. l /\ q e. l ) ) ) } ) } $.
  $}

  ${
    $d L l p q x y $.  $d P l p q x y $.
    isline1.2 $e |- P = U. L $.
    $( The value of the function ` ( line `` L ) ` is the line passing through
       the points ` p ` and ` q ` . $)
    isline1 $p |- ( L e. Plig -> ( line ` L ) = { <. <. p , q >. , l
       >. | ( ( p e. P /\ q e. P ) /\ ( l e. L /\ ( p =/= q /\ p e. l
       /\ q e. l ) ) ) } ) $=
