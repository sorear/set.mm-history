  $c Tofld $.

  $( Extend class notation with the class of all totally ordered fields. $)
  ctofld $a class Tofld $.

  ${
    $d g h r x y z $.
    $( Definition of a totally ordered field.  Experimental. $)
    df-tofld $a |- Tofld = { <. <. g , h >. , r >. | ( <. g , h >. e. Fld
     /\ ( r e. Toset /\ U. U. r = ran g ) /\ A. x e. U. U. r A. y e. U. U. r
        A. z e. U. U. r ( ( x r y -> ( x g z ) r ( y g z ) ) /\
        ( ( Id ` g ) r z -> ( x h z ) r ( y h z ) ) ) ) } $.
  $}

  $c zeroDiv $.

  $( Extend class notation with the class of all the zero divisors. $)
  czerodiv $a class zeroDiv $.

  $( Definition of the zero divisors of a ring.  Experimental. $)
  df-zd $a |- zeroDiv = { <. r , y >. | y = { a e. ran ( 1st ` r ) |
      ( a =/= ( Id ` ( 1st ` r ) ) /\
        E. b e. ran ( 1st ` r )
           ( b =/= ( Id ` ( 1st ` r ) ) /\
           ( a ( 2nd ` r ) b ) = ( Id ` ( 1st ` r ) ) ) ) } } $.

