    ${ $d J x y z $. $d M x y z $. $d X x y z $.
    $( Closure of join. $)
    cljo $p |- ( ( J e. A /\ M e. B /\ <. J , M >. e. LatAlg )
         -> ( ( P e. X /\ Q e. X ) -> ( P J Q ) e. X ) ) $=
      ( wcel cop clatalg w3a wa cxp wf co jop adantr simprl simprr 3jca ex
      foprrn syl6 ) EAIFBIEFJKILZCGIZDGIZMZGGNGEOZUFUGLZCDEPGIUEUHUJUEUHMUIUFUG
