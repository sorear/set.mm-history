        UHUI $.
        $( [12-Dec-2009] $)
    $}

    $( Join is idempotent. ` ( P \/ P ) = P ` .  (Contributed by FL,
       12-Dec-2009.) $)
    jidd $p |- ( ( J e. A /\ M e. B /\ <. J , M >. e. LatAlg ) ->
      ( P e. X -> ( P J P ) = P ) ) $=
      ( wcel cop clatalg w3a co wceq wi wa labss1 imp simpl simprl cljo jca
      labss2 sylc opreq2 eqtr ex eqcoms syl expcom anidms com12 ) CFHZDAHEBHDEI
