        $( [12-Dec-2009] $)
    $}


    ${
      $d J x y z $.  $d M x y z $.  $d X x y z $.
      $( Absorption law. ` ( x \/ ( x /\ y ) ) = x ` .  (Contributed by FL,
         12-Dec-2009.) $)
      labs2 $p |- ( ( J e. A /\ M e. B /\ <. J , M >. e. LatAlg )
           -> A. x e. X A. y e. X ( x J ( x M y ) ) = x ) $=
        ( vz wcel cop clatalg cv co wceq wral wa wf w3a ralimi islatalg simp32
        cxp 3ad2ant3 syl6bi 3impia ) ECJZFDJZEFKLJZAMZUJBMZFNZENUJOZBGPZAGPZUGU
