  ${ $d J x y z $. $d M x y z $. $d X x y z $.
    jop1 $e |- X = dom dom J $.
    ${
    $( Join is a binary internal operation. $)
    jop $p |- ( ( J e. A /\ M e. B /\ <. J , M >. e. LatAlg )
         -> J : ( X X. X ) --> X ) $=
