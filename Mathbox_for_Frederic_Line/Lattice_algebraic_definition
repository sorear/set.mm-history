    $( Meet is idempotent. ` ( P /\ P ) = P ` .  (Contributed by FL,
       12-Dec-2009.) $)
    midd $p |- ( ( J e. A /\ M e. B /\ <. J , M >. e. LatAlg ) ->
      ( P e. X -> ( P M P ) = P ) ) $=
      ( wcel cop clatalg w3a co wceq wi wa labss2 imp simpl simprl clme jca
      labss1 sylc opreq2 eqtr ex eqcoms syl expcom anidms com12 ) CFHZDAHEBHDEI
