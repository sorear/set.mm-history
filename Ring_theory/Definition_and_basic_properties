  $c RingOps $.

  $( Extend class notation with the class of all unital rings. $)
  cring $a class RingOps $.

  ${
    $d g h x y z $.
    $( Define the class of all unital rings. $)
    df-ringo $a |- RingOps = { <. g , h >. | ( ( g e. AbelOp
      /\ h : ( ran g X. ran g ) --> ran g )
      /\ ( A. x e. ran g A. y e. ran g A. z e. ran g ( ( ( x h y
       ) h z ) = ( x h ( y h z ) ) /\ ( x h ( y g z ) ) = ( ( x h y ) g ( x h z
          ) ) /\ ( ( x g y ) h z ) = ( ( x h z ) g ( y h z ) ) ) /\ E. x e. ran
            g A. y e. ran g ( ( y h x ) = y /\ ( x h y ) = y ) ) ) } $.
  $}

