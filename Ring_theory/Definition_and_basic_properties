  ${
    $d G x y z $.  $d R x y z $.
    ringabl.1 $e |- G = ( 1st ` R ) $.
    $( A ring's addition operation is an Abelian group operation.  (Contributed
       by Steve Rodriguez, 9-Sep-2007.) $)
    ringoablo $p |- ( R e. RingOps -> G e. AbelOp ) $=
      ( vx vy vz cring wcel cabl crn cxp c2nd cfv wf wa cv co wceq w3a wral
      wrex eqid ringoi simpld ) AGHZBIHZBJZUGKUGALMZNZUEUFUIODPZEPZUHQZFPZUHQUJ
      UKUMUHQZUHQRUJUKUMBQUHQULUJUMUHQZBQRUJUKBQUMUHQUOUNBQRSFUGTEUGTDUGTUKUJUH
      QUKRULUKROEUGTDUGUAODEFABUHUGCUHUBUGUBUCUDUD $.
      $( [9-Sep-2007] $)
  $}

  ${
    ringgrp.1 $e |- G = ( 1st ` R ) $.
    $( A ring's addition operation is a group operation.  (Contributed by Steve
       Rodriguez, 9-Sep-2007.) $)
    ringogrpo $p |- ( R e. RingOps -> G e. GrpOp ) $=
      ( cring wcel cabl cgr ringoablo ablogrpo syl ) ADEBFEBGEABCHBIJ $.
      $( [9-Sep-2007] $)
  $}

  ${
    ringgcl.1 $e |- G = ( 1st ` R ) $.
    ringgcl.2 $e |- X = ran G $.
    $( Closure law for the addition (group) operation of a ring.  (Contributed
       by Steve Rodriguez, 9-Sep-2007.) $)
    ringgcl $p |- ( ( R e. RingOps /\ A e. X /\ B e. X ) -> ( A G B ) e. X ) $=
      ( cgr wcel co cring grpocl ringogrpo syl3an1 ) DHIAEIBEIABDJEICKIABDEGLCD
      FMN $.
      $( [9-Sep-2007] $)

    $( The addition operation of a ring is commutative.  (Contributed by Steve
       Rodriguez, 9-Sep-2007.) $)
    ringcom $p |- ( ( R e. RingOps /\ A e. X /\ B e. X ) ->
                      ( A G B ) = ( B G A ) ) $=
      ( cabl wcel co wceq cring ablocom ringoablo syl3an1 ) DHIAEIBEIABDJBADJKC
      LIABDEGMCDFNO $.
      $( [9-Sep-2007] $)

    $( The addition operation of a ring is associative.  (Contributed by Steve
       Rodriguez, 9-Sep-2007.) $)
    ringaass $p |- ( ( R e. RingOps /\ ( A e. X /\ B e. X /\ C e. X ) ) ->
                        ( ( A G B ) G C ) = ( A G ( B G C ) ) ) $=
      ( cring wcel cgr w3a co wceq ringogrpo grpoass sylan ) DIJEKJAFJBFJCFJLAB
      EMCEMABCEMEMNDEGOABCEFHPQ $.
      $( [9-Sep-2007] $)

    $( The addition operation of a ring is commutative.  (Contributed by Steve
       Rodriguez, 9-Sep-2007.) $)
    ringa23 $p |- ( ( R e. RingOps /\ ( A e. X /\ B e. X /\ C e. X ) ) ->
                      ( ( A G B ) G C ) = ( ( A G C ) G B ) ) $=
      ( cring wcel cabl w3a co wceq ringoablo abl23 sylan ) DIJEKJAFJBFJCFJLABE
      MCEMACEMBEMNDEGOABCEFHPQ $.
      $( [9-Sep-2007] $)

    $( Rearrangement of 4 terms in a sum of ring elements.  (Contributed by
       Steve Rodriguez, 9-Sep-2007.) $)
    ringa4 $p |- ( ( R e. RingOps /\ ( A e. X /\ B e. X ) /\
                   ( C e. X /\ D e. X ) ) ->
                     ( ( A G B ) G ( C G D ) ) = ( ( A G C ) G ( B G D ) ) ) $=
      ( cabl wcel wa co wceq cring abl4 ringoablo syl3an1 ) FJKAGKBGKLCGKDGKLAB
      FMCDFMFMACFMBDFMFMNEOKABCDFGIPEFHQR $.
      $( [9-Sep-2007] $)

    $( Right cancellation law for the addition operation of a ring.
       (Contributed by Steve Rodriguez, 9-Sep-2007.) $)
    ringrcan $p |- ( ( R e. RingOps /\ ( A e. X /\ B e. X /\ C e. X ) ) ->
                       ( ( A G C ) = ( B G C ) <-> A = B ) ) $=
      ( cring wcel cgr w3a co wceq wb ringogrpo grporcan sylan ) DIJEKJAFJBFJCF
      JLACEMBCEMNABNODEGPABCEFHQR $.
      $( [9-Sep-2007] $)

    $( Left cancellation law for the addition operation of a ring.
       (Contributed by Steve Rodriguez, 9-Sep-2007.) $)
    ringlcan $p |- ( ( R e. RingOps /\ ( A e. X /\ B e. X /\ C e. X ) ) ->
                       ( ( C G A ) = ( C G B ) <-> A = B ) ) $=
      ( cring wcel cgr w3a co wceq wb ringogrpo grpolcan sylan ) DIJEKJAFJBFJCF
      JLCAEMCBEMNABNODEGPABCEFHQR $.
      $( [9-Sep-2007] $)
  $}

  ${
    ring0cl.1 $e |- G = ( 1st ` R ) $.
    ring0cl.2 $e |- X = ran G $.
    ring0cl.3 $e |- Z = ( Id ` G ) $.
    $( A ring has an additive identity element.  (Contributed by Steve
       Rodriguez, 9-Sep-2007.) $)
    ring0cl $p |- ( R e. RingOps -> Z e. X ) $=
      ( cring wcel cgr ringogrpo grpoidcl syl ) AHIBJIDCIABEKDBCFGLM $.
      $( [9-Sep-2007] $)

    $( The additive identity of a ring is a right identity element.
       (Contributed by Steve Rodriguez, 9-Sep-2007.) $)
    ring0rid $p |- ( ( R e. RingOps /\ A e. X ) -> ( A G Z ) = A ) $=
      ( cring wcel cgr co wceq ringogrpo grporid sylan ) BIJCKJADJAECLAMBCFNAEC
      DGHOP $.
      $( [9-Sep-2007] $)

    $( The additive identity of a ring is a left identity element.
       (Contributed by Steve Rodriguez, 9-Sep-2007.) $)
    ring0lid $p |- ( ( R e. RingOps /\ A e. X ) -> ( Z G A ) = A ) $=
      ( cring wcel cgr co wceq ringogrpo grpolid sylan ) BIJCKJADJEACLAMBCFNAEC
      DGHOP $.
      $( [9-Sep-2007] $)
  $}

