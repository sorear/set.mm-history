      $( [9-Sep-2007] $)
  $}

  ${
    ringgrp.1 $e |- G = ( 1st ` R ) $.
    $( A ring's addition operation is a group operation.  (Contributed by Steve
       Rodriguez, 9-Sep-2007.) $)
    ringgrp $p |- ( R e. Ring -> G e. Grp ) $=
      ( cring wcel cabl cgr ringabl ablgrp syl ) ADEBFEBGEABCHBIJ $.
      $( [9-Sep-2007] $)
  $}

  ${
    ringgcl.1 $e |- G = ( 1st ` R ) $.
    ringgcl.2 $e |- X = ran G $.
    $( Closure law for the addition (group) operation of a ring.  (Contributed
       by Steve Rodriguez, 9-Sep-2007.) $)
    ringgcl $p |- ( ( R e. Ring /\ A e. X /\ B e. X ) -> ( A G B ) e. X ) $=
      ( cgr wcel co cring grpcl ringgrp syl3an1 ) DHIAEIBEIABDJEICKIABDEGLCDFMN
      $.
      $( [9-Sep-2007] $)

    $( The addition operation of a ring is commutative.  (Contributed by Steve
       Rodriguez, 9-Sep-2007.) $)
    ringcom $p |- ( ( R e. Ring /\ A e. X /\ B e. X ) ->
                      ( A G B ) = ( B G A ) ) $=
      ( cabl wcel co wceq cring ablcom ringabl syl3an1 ) DHIAEIBEIABDJBADJKCLIA
      BDEGMCDFNO $.
      $( [9-Sep-2007] $)

    $( The addition operation of a ring is associative.  (Contributed by Steve
       Rodriguez, 9-Sep-2007.) $)
    ringaass $p |- ( ( R e. Ring /\ ( A e. X /\ B e. X /\ C e. X ) ) ->
                        ( ( A G B ) G C ) = ( A G ( B G C ) ) ) $=
      ( cgr wcel w3a co wceq cring grpass ringgrp sylan ) EIJAFJBFJCFJKABELCELA
      BCELELMDNJABCEFHODEGPQ $.
      $( [9-Sep-2007] $)

    $( The addition operation of a ring is commutative.  (Contributed by Steve
       Rodriguez, 9-Sep-2007.) $)
    ringa23 $p |- ( ( R e. Ring /\ ( A e. X /\ B e. X /\ C e. X ) ) ->
                      ( ( A G B ) G C ) = ( ( A G C ) G B ) ) $=
      ( cabl wcel w3a co wceq cring abl23 ringabl sylan ) EIJAFJBFJCFJKABELCELA
      CELBELMDNJABCEFHODEGPQ $.
      $( [9-Sep-2007] $)

    $( Rearrangement of 4 terms in a sum of ring elements.  (Contributed by
       Steve Rodriguez, 9-Sep-2007.) $)
    ringa4 $p |- ( ( R e. Ring /\ ( A e. X /\ B e. X ) /\
                   ( C e. X /\ D e. X ) ) ->
                     ( ( A G B ) G ( C G D ) ) = ( ( A G C ) G ( B G D ) ) ) $=
      ( cabl wcel wa co wceq cring abl4 ringabl syl3an1 ) FJKAGKBGKLCGKDGKLABFM
      CDFMFMACFMBDFMFMNEOKABCDFGIPEFHQR $.
      $( [9-Sep-2007] $)

    $( Right cancellation law for the addition operation of a ring.
       (Contributed by Steve Rodriguez, 9-Sep-2007.) $)
    ringrcan $p |- ( ( R e. Ring /\ ( A e. X /\ B e. X /\ C e. X ) ) ->
                       ( ( A G C ) = ( B G C ) <-> A = B ) ) $=
      ( cgr wcel w3a co wceq wb cring grprcan ringgrp sylan ) EIJAFJBFJCFJKACEL
      BCELMABMNDOJABCEFHPDEGQR $.
      $( [9-Sep-2007] $)

    $( Left cancellation law for the addition operation of a ring.
       (Contributed by Steve Rodriguez, 9-Sep-2007.) $)
    ringlcan $p |- ( ( R e. Ring /\ ( A e. X /\ B e. X /\ C e. X ) ) ->
                       ( ( C G A ) = ( C G B ) <-> A = B ) ) $=
      ( cgr wcel w3a co wceq wb cring grplcan ringgrp sylan ) EIJAFJBFJCFJKCAEL
      CBELMABMNDOJABCEFHPDEGQR $.
      $( [9-Sep-2007] $)
  $}

  ${
    ring0cl.1 $e |- G = ( 1st ` R ) $.
    ring0cl.2 $e |- X = ran G $.
    ring0cl.3 $e |- Z = ( Id ` G ) $.
    $( A ring has an additive identity element.  (Contributed by Steve
       Rodriguez, 9-Sep-2007.) $)
    ring0cl $p |- ( R e. Ring -> Z e. X ) $=
      ( cring wcel cgr ringgrp grpidcl syl ) AHIBJIDCIABEKDBCFGLM $.
      $( [9-Sep-2007] $)

    $( The additive identity of a ring is a right identity element.
       (Contributed by Steve Rodriguez, 9-Sep-2007.) $)
    ring0rid $p |- ( ( R e. Ring /\ A e. X ) -> ( A G Z ) = A ) $=
      ( cgr wcel co wceq cring grprid ringgrp sylan ) CIJADJAECKALBMJAECDGHNBCF
      OP $.
      $( [9-Sep-2007] $)

    $( The additive identity of a ring is a left identity element.
       (Contributed by Steve Rodriguez, 9-Sep-2007.) $)
    ring0lid $p |- ( ( R e. Ring /\ A e. X ) -> ( Z G A ) = A ) $=
      ( cgr wcel co wceq cring grplid ringgrp sylan ) CIJADJEACKALBMJAECDGHNBCF
      OP $.
      $( [9-Sep-2007] $)
  $}

  ${
