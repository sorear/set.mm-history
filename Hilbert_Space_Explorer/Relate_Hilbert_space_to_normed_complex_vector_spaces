    $( The zero vector of Hilbert space. $)
    hh0v $p |- 0h = ( 0vec ` U ) $=
      ( cn0v cfv cpv cgi cva c0v eqid 0vfval hhva fveq2i hilid 3eqtr2ri ) ACDZA
      EDZFDGFDHAPOPIOIJGPFABKLMN $.
      $( [17-Nov-2007] $)

    $( The scalar product operation of Hilbert space. $)
    hhsm $p |- .h = ( .s ` U ) $=
      ( hhnv h2hsm ) ABABCD $.
      $( [17-Nov-2007] $)

    $( The vector subtraction operation of Hilbert space. $)
    hhvs $p |- -h = ( -v ` U ) $=
      ( hhnv hhba h2hvs ) ABABCABDE $.
      $( [13-Dec-2007] $)

    $( The norm function of Hilbert space. $)
    hhnm $p |- normh = ( norm ` U ) $=
      ( hhnv h2hnm ) ABABCD $.
      $( [17-Nov-2007] $)

    ${
