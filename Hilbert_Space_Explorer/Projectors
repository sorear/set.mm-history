    $( Value of a projection. $)
    pjvalt $p |- ( ( H e. CH /\ A e. H~ ) -> ( ( proj ` H ) ` A ) =
             U. { x e. H | E. y e. ( _|_ ` H ) A = ( x +h y ) } ) $=
      ( vz vw cch wcel chil wa cpj cfv cv cva co wceq cort wrex crab cuni
      copab pjmvalt fveq1d adantr cvv eqeq1 rexbidv rabbisdv unieqd eqid
      fvopab4g rabexg uniexg syl sylan2 ancoms eqtrd ) DGHZCIHZJCDKLZLZCEMZIHFM
      VBAMBMNOZPZBDQLZRZADSZTZPJEFUAZLZCVCPZBVERZADSZTZURVAVJPUSURCUTVIEFABDUBU
