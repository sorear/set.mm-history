    $( Equality with a projection. $)
    pjeq $p |- ( ( H e. CH /\ A e. ~H ) -> ( ( ( proj ` H ) ` A ) = B <->
                ( B e. H /\ E. x e. ( _|_ ` H ) A = ( B +h x ) ) ) ) $=
      ( cch wcel chil wa cpj cfv wceq cv cva co cort wrex eleq1 axpjcl syl5cbi
