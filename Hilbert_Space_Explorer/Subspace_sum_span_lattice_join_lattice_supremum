        shless $p |- ( A (_ B -> ( A +H C ) (_ ( B +H C ) ) $=
          ( vx vy vz wss cph co cv cva wceq wrex wcel wa wex ssel anim1d
          19.22dv df-rex 3imtr4g shsel ssrdv ) ABJZGACKLZBCKLZUGGMZHMZIMNLOICPZ
          HAPZULHBPZUJUHQUJUIQUGUKAQZULRZHSUKBQZULRZHSUMUNUGUPURHUGUOUQULABUKTU
          AUBULHAUCULHBUCUDHIACUJDFUEHIBCUJEFUEUDUF $.
          $( [18-Nov-2000] $)

        $( Add disjunct to both sides of Hilbert subspace ordering. $)
        shlej1 $p |- ( A (_ B -> ( A vH C ) (_ ( B vH C ) ) $=
          ( wss chj co wa shub1 sstr2 mpi shjcom sseqtr jctir shjcl shlub
          sylib ) ABGZABCHIZGZCUAGZJACHIUAGTUBUCTBUAGUBBCEFKABUALMCCBHIUACBFEKC
          BFENOPACUADFBCEFQRS $.
          $( [19-Oct-1999] $)

        $( Add disjunct to both sides of Hilbert subspace ordering. $)
        shlej2 $p |- ( A (_ B -> ( C vH A ) (_ ( C vH B ) ) $=
          ( wss chj co shlej1 shjcom 3sstr4g ) ABGACHIBCHICAHICBHIABCDEFJCAFDKC
          BFEKL $.
          $( [19-Oct-1999] $)
      $}
    $}
  $}

  $( Subspace sum is smaller than subspace join.  Remark in [Kalmbach]
     p. 65. $)
  shslejt $p |- ( ( A e. SH /\ B e. SH ) -> ( A +H B ) (_ ( A vH B ) ) $=
    ( csh wcel cph co chj wss chil cif wceq opreq1 sseq12d opreq2 helsh elimel
    shslej dedth2h ) ACDZBCDZABEFZABGFZHSAIJZBEFZUCBGFZHUCTBIJZEFZUCUFGFZHABIIA
    UCKUAUDUBUEAUCBELAUCBGLMBUFKUDUGUEUHBUFUCENBUFUCGNMUCUFAICOPBICOPQR $.
    $( [26-Aug-2004] $) $( [12-Jul-2004] $)

  $( Closure of intersection of two subspaces. $)
  shinclt $p |- ( ( A e. SH /\ B e. SH ) -> ( A i^i B ) e. SH ) $=
    ( csh wcel cin chil cif wceq ineq1 eleq1d ineq2 helsh elimel shincl
    dedth2h ) ACDZBCDZABEZCDPAFGZBEZCDSQBFGZEZCDABFFASHRTCASBIJBUAHTUBCBUASKJSU
    AAFCLMBFCLMNO $.
    $( [24-Jun-2004] $) $( [24-Jun-2004] $)

  $( Hilbert lattice join is an upper bound of two subspaces. $)
  shub1t $p |- ( ( A e. SH /\ B e. SH ) -> A (_ ( A vH B ) ) $=
    ( csh wcel wa cph co chj shsub1t shslejt sstrd ) ACDBCDEAABFGABHGABIABJK $.
    $( [22-Jun-2004] $) $( [22-Jun-2004] $)

  $( A subspace is a subset of its Hilbert lattice join with another. $)
  shub2t $p |- ( ( A e. SH /\ B e. SH ) -> A (_ ( B vH A ) ) $=
    ( csh wcel wa chj co shub1t shjcomt sseqtrd ) ACDBCDEAABFGBAFGABHABIJ $.
    $( [23-Jun-2004] $) $( [22-Jun-2004] $)

  $( Hilbert lattice join is the least upper bound (among Hilbert lattice
     elements) of two subspaces. $)
  shlubt $p |- ( ( A e. SH /\ B e. SH /\ C e. CH ) ->
               ( ( A (_ C /\ B (_ C ) <-> ( A vH B ) (_ C ) ) $=
    ( csh wcel cch wss wa chj co wb chil cif wceq sseq1 anbi1d opreq1 sseq1d
    bibi12d anbi2d opreq2 sseq2 anbi12d helsh elimel helch shlub dedth3h ) ADEZ
    BDEZCFEZACGZBCGZHZABIJZCGZKUIALMZCGZUMHZUQBIJZCGZKABCLLLURUJBLMZCGZHZUQVBIJ
