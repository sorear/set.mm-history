    BUBUCCVGVEUBSUQVBVGALDUDUEBLDUDUECLFUFUEUGUH $.
    $( [15-Jun-2004] $) $( [15-Jun-2004] $)

  $( Add disjunct to both sides of Hilbert subspace ordering. $)
  shlej1t $p |- ( ( ( A e. SH /\ B e. SH /\ C e. SH ) /\
               A (_ B ) -> ( A vH C ) (_ ( B vH C ) ) $=
    ( csh wcel w3a wss chj co wa wi sstr2 shub1t syl5com shub2t ancoms jctird
