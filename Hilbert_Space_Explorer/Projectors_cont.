               ( A (_ B /\ ( B i^i ( _|_ ` A ) ) = 0H ) ) -> A = B ) $=
    ( cch wcel csh wa wss cort cfv cin c0h wceq wi cif sseq1 fveq2 ineq2d
    eqeq1d anbi12d eqeq1 imbi12d sseq2 ineq1 eqeq2 h0elch elimel h0elsh pjoml
    dedth2h imp ) ACDZBEDZFABGZBAHIZJZKLZFZABLZUKULUQURMUKAKNZBGZBUSHIZJZKLZFZU
