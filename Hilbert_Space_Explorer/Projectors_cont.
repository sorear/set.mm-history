  ${
    pjcl.1 $e |- H e. CH $.
    $( Closure of a projection in its subspace. $)
    pjcl $p |- ( A e. H~ -> ( ( proj ` H ) ` A ) e. H ) $=
      ( cch wcel chil cpj cfv axpjclt mpan ) BDEAFEABGHHBECABIJ $.
      $( [7-Oct-2000] $)

    $( Closure of a projection in Hilbert space. $)
    pjhcl $p |- ( A e. H~ -> ( ( proj ` H ) ` A ) e. H~ ) $=
      ( cch wcel chil cpj cfv pjhclt mpan ) BDEAFEABGHHFECABIJ $.
      $( [7-Oct-2000] $)
  $}

