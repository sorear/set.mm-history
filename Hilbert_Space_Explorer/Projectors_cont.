  ${
    pjcl.1 $e |- H e. CH $.
    $( Closure of a projection in its subspace. $)
    pjcli $p |- ( A e. ~H -> ( ( proj ` H ) ` A ) e. H ) $=
      ( cch wcel chil cpj cfv axpjcl mpan ) BDEAFEABGHHBECABIJ $.
      $( [7-Oct-2000] $)

    $( Closure of a projection in Hilbert space. $)
    pjhcli $p |- ( A e. ~H -> ( ( proj ` H ) ` A ) e. ~H ) $=
      ( cch wcel chil cpj cfv pjhcl mpan ) BDEAFEABGHHFECABIJ $.
      $( [7-Oct-2000] $)
  $}

