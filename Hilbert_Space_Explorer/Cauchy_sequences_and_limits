    $( A Cauchy sequence on a Hilbert space converges. $)
    hcaucvg $p |- ( F e. Cauchy -> A. x e. RR ( 0 < x ->
          E. y e. NN A. z e. NN A. w e. NN ( ( y <_ z /\ y <_ w ) ->
             ( normh ` ( ( F ` z ) -h ( F ` w ) ) ) < x ) ) ) $=
      ( ccau wcel cn chil wf cc0 cv clt wbr cle wa cfv cmv co cno wi wral wrex
      cr hcau pm3.27bd ) EFGHIEJKALZMNBLZCLZONUHDLZONPUIEQUJEQRSTQUGMNUADHUBCHU
      BBHUCUAAUDUBABCDEUEUF $.
      $( [16-Aug-1999] $)

    $( A sequence on a Hilbert space is a Cauchy sequence if it converges. $)
    seq1hcau $p |- ( F : NN --> H~ -> ( F e. Cauchy <->
          A. x e. RR ( 0 < x ->
          E. y e. NN A. z e. NN A. w e. NN ( ( y <_ z /\ y <_ w ) ->
             ( normh ` ( ( F ` z ) -h ( F ` w ) ) ) < x ) ) ) ) $=
      ( ccau wcel cn chil wf cc0 cv clt wbr cle wa cfv cmv co cno wi wral wrex
      cr hcau baib ) EFGHIEJKALZMNBLZCLZONUHDLZONPUIEQUJEQRSTQUGMNUADHUBCHUBBHU
      CUAAUDUBABCDEUEUF $.
      $( [16-Aug-1999] $)
  $}

