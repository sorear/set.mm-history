  $( Extend class notation with subspace sum. $)
  cplusssLMOLD $a class +ssLMx $.

  $( Extend class notation with orthocomplement of a subspace. $)
  cocvLMOLD $a class ocvLMx $.

  $( Extend class notation with set of closed subspaces. $)
  ccsubspLMOLD $a class CSubSpLMx $.

  $( Extend class notation with class of all Hilbert spaces. $)
  chsLMOLD $a class HilLMx $.

  ${
    $d h s t u v w x y $.
    $( Define subspace sum. $)
    df-plusssLMOLD $a |- +ssLMx = ( v e. _V |-> ( x e. ~P ( vbaseLMx ` v ) ,
        y e. ~P ( vbaseLMx ` v ) |-> { w e. ( vbaseLMx ` v )
            | E. t e. x E. u e. y w = ( t ( vaddLMx ` v ) u ) } ) ) $.

    $( Def. 8.5.27, p. 227. $)
    $( Define orthocomplement of a subspace. $)
    df-ocvLMOLD $a |- ocvLMx = ( h e. _V |-> ( s e. ~P ( vbaseLMx ` h ) |->
   { x e. ( vbaseLMx ` h )
     | A. y e. s ( x ( ip ` h ) y ) = ( 0vLMx ` h ) } ) ) $.

    $( Def. 8.5.28, p. 226. $)
    $( Define set of closed subspaces. $)
    df-csubspLMOLD $a |- CSubSpLMx = ( h e. _V |-> { s
   | ( s C_ ( vbaseLMx ` h )
      /\ s = ( ( ocvLMx ` h ) ` ( ( ocvLMx ` h ) ` s ) ) ) } ) $.

    $( Def. 8.5.30, p. 228. $)
    $( Define class of all Hilbert spaces.  Based on Proposition 4.5, p. 176,
       Gudrun Kalmbach, Quantum Measures and Spaces, Kluwer, Dordrecht,
       1998. $)
    df-hilLMOLD $a |- HilLMx = { h e. PreHilLMx | A. s e. ( CSubSpLMx ` h )
          ( s ( +ssLMx ` h ) ( ( ocvLMx ` h ) ` s ) ) = ( vbaseLMx ` h ) } $.
  $}

