$(
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
        The union of a class and the Axiom of Union
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
$)

  $( Declare class union symbol. $)
  $c U. $. $( Big cup $)

  $( Extend class notation to include the union of a class (read:  'union
     ` A ` ') $)
  cuni $a class U. A $.

  ${
    $d x y A $.
    $( Define the union of a class.  Definition 5.5 of [TakeutiZaring]
       p. 16. $)
    df-uni $a |- U. A = { x | E. y ( x e. y /\ y e. A ) } $.
  $}

  ${
    $d x y A $.
    $( Alternate definition of class union. $)
    dfuni2 $p |- U. A = { x | E. y e. A  x e. y } $=
      ( cuni wel cv wcel wa wex cab wrex df-uni exancom df-rex bitr4 biabi
      eqtr ) CDABEZBFCGZHBIZAJRBCKZAJABCLTUAATSRHBIUARSBMRBCNOPQ $.
      $([28-Jun-98]$)
  $}

  ${
    $d x A y $.  $d x B y $.  $( ` y ` is dummy. $)
    $( Membership in class union. $)
    eluni $p |- ( A e. U. B <-> E. x ( A e. x /\ x e. B ) ) $=
      ( vy cuni wcel cvv cv wa wex elisset adantr 19.23aiv wel wceq eleq1
      birand biexdv df-uni vtoclabg pm5.21nii ) BCEZFBGFZBAHZFZUDCFZIZAJZBUBKUG
      UCAUEUCUFBUDKLMDANZUFIZAJUHDBUBGDHZBOZUJUGAULUIUEUFUKBUDPQRDACSTUA $.
      $([22-May-94]$)

    $( Membership in class union.  Restricted quantifier version. $)
    eluni2 $p |- ( A e. U. B <-> E. x e. B A e. x ) $=
      ( cv wcel wa wex cuni wrex exancom eluni df-rex 3bitr4 ) BADZEZNCEZFAGPOF
      AGBCHEOACIOPAJABCKOACLM $.
      $([31-Aug-99]$)
  $}

  ${
    $d x A $.  $d x B $.  $d x C $.  $( ` x ` is dummy. $)
    $( Membership in class union. $)
    elunii $p |- ( ( A e. B /\ B e. C ) -> A e. U. C ) $=
      ( vx wcel wa cv wex cuni wceq eleq2 eleq1 bi2and cla4egv anabsi7 eluni
      sylibr ) ABEZBCEZFZADGZEZUACEZFZDHZACIERSUEUDTDBCUABJUBRUCSUABAKUABCLMNOD
      ACPQ $.
      $([24-Mar-95]$)
  $}

  ${
    $d y z A $.  $d x y z $.  $( ` z ` is dummy. $)
    hbuni.1 $e |- ( y e. A -> A. x y e. A ) $.
    $( Bound-variable hypothesis builder for union. $)
    hbuni   $p |- ( y e. U. A -> A. x y e. U. A ) $=
      ( vz wel cv wcel wa wex wal cuni ax-17 hbel hban hbex eluni bial 3imtr4
      ) BEFZEGZCHZIZEJZUDAKBGZCLHZUFAKUCAETUBATAMZABBUACUGDNOPEUECQZUFUDAUHRS
      $.
      $([30-Dec-96]$)
  $}

  ${
    $d x A y $.  $d ph y $.  $( ` y ` is dummy. $)
    $( Membership in union of a class abstract. $)
    eluniab   $p |- ( A e. U. { x | ph } <-> E. x ( A e. x /\ ph ) ) $=
      ( vy cab cuni wcel cv wa wex eluni ax-17 hbab1 hban weq eleq2 eleq1
      bi2and abid bilan syl6bb cbvex bitr ) CABEZFGCDHZGZUEUDGZIZDJCBHZGZAIZBJD
      CUDKUHUKDBUFUGBUFBLABDMNUKDLDBOZUHUJUIUDGZIUKULUFUJUGUMUEUICPUEUIUDQRUMAU
      JABSTUAUBUC $.
      $([11-Aug-94]$)
  $}

  ${
    $d x y A $.  $d x y B $.  $( ` x y ` are dummy. $)
    $( Equality theorem for class union.  Exercise 15 of [TakeutiZaring]
       p. 18. $)
    unieq $p |- ( A = B -> U. A = U. B ) $=
      ( vx vy wceq wel cv wcel wa wex cab cuni eleq2 biland biexdv biabdv
      df-uni 3eqtr4g ) ABEZCDFZDGZAHZIZDJZCKTUABHZIZDJZCKALBLSUDUGCSUCUFDSUBUET
      ABUAMNOPCDAQCDBQR $.
      $([10-Aug-93]$)
  $}

  ${
    unieqi.1 $e |- A = B $.
    $( Inference of equality of two class unions. $)
    unieqi   $p |- U. A = U. B $=
      ( wceq cuni unieq ax-mp ) ABDAEBEDCABFG $.
      $([30-Aug-93]$)
  $}

  ${
    unieqd.1 $e |- ( ph -> A = B ) $.
    $( Deduction of equality of two class unions. $)
    unieqd   $p |- ( ph -> U. A = U. B ) $=
      ( wceq cuni unieq syl ) ABCEBFCFEDBCGH $.
      $([21-Apr-95]$)
  $}

  ${
    $d x y $.  $( ` x y ` are dummy. $)
    $( The union of the empty set is the empty set.  Theorem 8.7 of [Quine]
       p. 54. $)
    uni0 $p |- (/) = U. (/) $=
      ( vx vy weq wn cab wel cv c0 wcel wa wex cuni noel intnan nex eqid 2th
      bicon1 biabi dfnul2 df-uni 3eqtr4 ) AACZDZAEABFZBGZHIZJZBKZAEHHLUDUIAUIUC
      UIDUCUHBUGUEUFMNOAPQRSATABHUAUB $.
      $([16-Sep-93]$)
  $}

  ${
    $d x y A $.  $d x y B $.
    unpr.1 $e |- A e. V $.
    unpr.2 $e |- B e. V $.
    $( The union of a pair is the union of its members.  Proposition 5.7 of
       [TakeutiZaring] p. 16. $)
    unpr $p |- U. { A , B } = ( A u. B ) $=
      ( vx vy cv wcel wo cab wel cpr wa wex cun cuni wceq 19.43 visset elpr
      bilan andi bitr biex clel3 exancom bi2or 3bitr4r biabi dfun2 df-uni
      3eqtr4r ) EGZAHZUMBHZIZEJEFKZFGZABLZHZMZFNZEJABOUSPUPVBEUQURAQZMZUQURBQZM
      ZIZFNVDFNZVFFNZIVBUPVDVFFRVAVGFVAUQVCVEIZMVGUTVJUQURABFSTUAUQVCVEUBUCUDUN
      VHUOVIUNVCUQMFNVHFUMACUEVCUQFUFUCUOVEUQMFNVIFUMBDUEVEUQFUFUCUGUHUIEABUJEF
      USUKUL $.
      $([8-Jan-04]$)
  $}

  ${
    unisn.1 $e |- A e. V $.
    $( A set equals the union of its singleton.  Theorem 8.2 of [Quine]
       p. 53. $)
    unisn $p |- U. { A } = A $=
      ( csn cuni cpr cun dfsn2 unieqi unpr unidm 3eqtr ) ACZDAAEZDAAFALMAGHAABB
      IAJK $.
      $([9-Jan-04]$)
  $}

  ${
    $d x A $.
    $( A set equals the union of its singleton.  Theorem 8.2 of [Quine]
       p. 53. $)
    unisng $p |- ( A e. B -> U. { A } = A ) $=
      ( vx cv csn cuni wceq sneq unieqd id cleq12d visset unisn vtoclg ) CDZEZF
      ZOGAEZFZAGCABOAGZQSOATPROAHITJKOCLMN $.
