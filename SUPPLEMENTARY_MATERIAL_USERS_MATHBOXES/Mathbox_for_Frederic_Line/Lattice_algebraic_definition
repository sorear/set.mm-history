        THESGESZTUIGHIABCDEFUCUJUIUPUDUAUB $.
        $( [12-Dec-2009] $)
    $}

    ${
      $d J x y z $.  $d M x y z $.  $d X x y z $.
      $( Closure of join.  (Contributed by FL, 12-Dec-2009.) $)
      cljo $p |- ( ( J e. A /\ M e. B /\ <. J , M >. e. LatAlg )
         -> ( ( P e. X /\ Q e. X ) -> ( P J Q ) e. X ) ) $=
        ( wcel cop clatalg w3a wa cxp wf co jop adantr simprl simprr 3jca fovrn
        ex syl6 ) EAIFBIEFJKILZCGIZDGIZMZGGNGEOZUFUGLZCDEPGIUEUHUJUEUHMUIUFUGUE
        UIUHABEFGHQRUEUFUGSUEUFUGTUAUCCDGGGEUBUD $.
        $( [12-Dec-2009] $)
    $}

    ${
      $d J x y z $.  $d M x y z $.  $d X x y z $.
      $( Closure of meet.  (Contributed by FL, 12-Dec-2009.) $)
      clme $p |- ( ( J e. A /\ M e. B /\ <. J , M >. e. LatAlg )
         -> ( ( P e. X /\ Q e. X ) -> ( P M Q ) e. X ) ) $=
        ( wcel cop clatalg w3a wa cxp wf co mop adantr simprl simprr 3jca fovrn
        ex syl6 ) EAIFBIEFJKILZCGIZDGIZMZGGNGFOZUFUGLZCDFPGIUEUHUJUEUHMUIUFUGUE
        UIUHABEFGHQRUEUFUGSUEUFUGTUAUCCDGGGFUBUD $.
        $( [12-Dec-2009] $)
    $}

    ${
      $d J x y z $.  $d M x y z $.  $d X x y z $.
      $( Absorption law. ` ( x /\ ( x \/ y ) ) = x ` .  (Contributed by FL,
         12-Dec-2009.) $)
      labs1 $p |- ( ( J e. A /\ M e. B /\ <. J , M >. e. LatAlg )
         -> A. x e. X A. y e. X ( x M ( x J y ) ) = x ) $=
        ( vz wcel cop clatalg cv co wceq wral wa wf w3a ralimi islatalg simp31
        cxp 3ad2ant3 syl6bi 3impia ) ECJZFDJZEFKLJZAMZUJBMZENZFNUJOZBGPZAGPZUGU
        HQUIGGUCZGERZUPGFRZULUKUJENOZUJUKFNZUKUJFNOZUMUJUTENUJOZUJUKIMZFNFNUTVC
        FNOUJUKVCENENULVCENOQIGPZSSZBGPZAGPZSUOABICDEFGHUAVGUQUOURVFUNAGVEUMBGU
        SVAUMVBVDUBTTUDUEUF $.
        $( [12-Dec-2009] $)
    $}

    ${
      $d J x y $.  $d M x y $.  $d P x y $.  $d Q y $.  $d X x y $.
      $( Absorption law. ` ( P /\ ( P \/ Q ) ) = P ` .  (Contributed by FL,
         12-Dec-2009.) $)
      labss1 $p |- ( ( J e. A /\ M e. B /\ <. J , M >. e. LatAlg )
           -> ( ( P e. X /\ Q e. X ) -> ( P M ( P J Q ) ) = P ) ) $=
        ( vx vy wcel cop clatalg w3a cv co wceq wral wa labs1 id oveq12d oveq2d
        oveq1 eqeq12d oveq2 eqeq1d rcla42v syl5com ) EAKFBKEFLMKNIOZUJJOZEPZFPZ
        UJQZJGRIGRCGKDGKSCCDEPZFPZCQZIJABEFGHTUNUQCCUKEPZFPZCQIJCDGGUJCQZUMUSUJ
        CUTUJCULURFUTUAZUJCUKEUDUBVAUEUKDQZUSUPCVBURUOCFUKDCEUFUCUGUHUI $.
        $( [12-Dec-2009] $)
    $}

    ${
      $d J x y z $.  $d M x y z $.  $d X x y z $.
      $( Absorption law. ` ( x \/ ( x /\ y ) ) = x ` .  (Contributed by FL,
         12-Dec-2009.) $)
      labs2 $p |- ( ( J e. A /\ M e. B /\ <. J , M >. e. LatAlg )
           -> A. x e. X A. y e. X ( x J ( x M y ) ) = x ) $=
        ( vz wcel cop clatalg cv co wceq wral wa wf w3a ralimi islatalg simp32
        cxp 3ad2ant3 syl6bi 3impia ) ECJZFDJZEFKLJZAMZUJBMZFNZENUJOZBGPZAGPZUGU
        HQUIGGUCZGERZUPGFRZUJUKENZUKUJENOZULUKUJFNOZUJUSFNUJOZUMUJUKIMZFNFNULVC
