      CUBMOPABTDFQRS $.
      $( [28-Feb-2007] $) $( [17-Feb-2007] $)

    $( The intersection of the empty set is the universal class.  Exercise 2 of
       [TakeutiZaring] p. 44. $)
    int0 $p |- |^| (/) = V $=
      ( vy vx cv c0 wcel wi wal cab wceq cint cvv noel pm2.21i ax-gen eqid 2th
      abbii df-int df-v 3eqtr4 ) ACZDEZBCZUAEZFZAGZBHUCUCIZBHDJKUFUGBUFUGUEAUBU
      DUALMNUCOPQBADRBST $.
      $( [18-Aug-1993] $)
  $}

  ${
    $d x y A $.  $d x y B $.  $d y ph $.
    $( An element of a class includes the intersection of the class.  Exercise
       4 of [TakeutiZaring] p. 44 (with correction), generalized to classes. $)
    intss1 $p |- ( A e. B -> |^| B (_ A ) $=
      ( vx vy wcel cint cv wi wal wceq eleq1 eleq2 imbi12d cla4gv pm2.43a
      visset elint syl5ib ssrdv ) ABEZCBFZATDGZBEZCGZUBEZHZDIZUDAEZUDUAEUGTUHUF
      TUHHDABUBAJUCTUEUHUBABKUBAUDLMNODUDBCPQRS $.
      $( [18-Nov-1995] $)

    $( Subclass of a class intersection.  Theorem 5.11(viii) of [Monk1] p. 52
       and its converse. $)
    ssint $p |- ( A (_ |^| B <-> A. x e. B A (_ x ) $=
      ( vy cint wss cv wcel wral dfss3 visset elint2 ralbii ralcom bitr4 3bitr
      ) BCEZFDGZQHZDBIRAGZHZACIZDBIZBTFZACIZDBQJSUBDBARCDKLMUCUADBIZACIUEUADABC
      NUDUFACDBTJMOP $.
      $( [14-Oct-1999] $)

    $( Subclass of the intersection of a class abstraction. $)
    ssintab $p |- ( A (_ |^| { x | ph } <-> A. x ( ph -> A (_ x ) ) $=
      ( vy cab cint wss cv wral wcel wi wal ssint df-ral hbab1 ax-17 hbim wceq
      eleq1 sseq2 imbi12d cbval abid imbi1i albii bitr 3bitr ) CABEZFGCDHZGZDUH
      IUIUHJZUJKZDLZACBHZGZKZBLZDCUHMUJDUHNUMUNUHJZUOKZBLUQULUSDBUKUJBABDOUJBPQ
      USDPUIUNRUKURUJUOUIUNUHSUIUNCTUAUBUSUPBURAUOABUCUDUEUFUG $.
      $( [31-Jul-2006] $) $( [31-Jul-2006] $)

    $( Subclass of a least upper bound. $)
    ssintub $p |- A (_ |^| { x e. B | A (_ x } $=
      ( vy cv wss crab cint ssint wcel sseq2 elrab pm3.27bi mprgbir ) BBAEZFZAC
      GZHFBDEZFZDQDBQIRQJRCJSPSARCORBKLMN $.
      $( [8-Aug-2000] $)

    $( Subclass of the minimum value of class of supersets. $)
    ssmin $p |- A (_ |^| { x | ( A (_ x /\ ph ) } $=
      ( cv wss wa cab cint wi ssintab pm3.26 mpgbir ) CCBDEZAFZBGHENMIBNBCJMAKL
      $.
      $( [10-Aug-2006] $) $( [10-Aug-2006] $)

    $( Any member of a class is the smallest of those members that include
       it. $)
    intmin $p |- ( A e. B -> |^| { x e. B | A (_ x } = A ) $=
      ( vy wcel cv wss crab cint wa wceq wi wral ssid sseq2 eleq2 imbi12d
      rcla4v mpii visset elintrab syl5ib ssrdv ssintub jctir eqss sylibr ) BCEZ
      BAFZGZACHIZBGZBUKGZJUKBKUHULUMUHDUKBUHUJDFZUIEZLZACMZUNBEZUNUKEUHUQBBGZUR
      BNUPUSURLABCUIBKUJUSUOURUIBBOUIBUNPQRSUJAUNCDTUAUBUCABCUDUEUKBUFUG $.
      $( [8-Oct-2006] $) $( [13-Aug-2002] $)

    $( Intersection of subclasses. $)
    intss $p |- ( A (_ B -> |^| B (_ |^| A ) $=
      ( vy vx cv wcel wi wal cint wss imim1 19.20ii visset elint 3imtr4g
      19.21aiv dfss2 3imtr4 ) CEZAFZSBFZGZCHZDEZBIZFZUDAIZFZGZDHABJUEUGJUCUIDUC
      UAUDSFZGZCHTUJGZCHUFUHUBUKULCTUAUJKLCUDBDMZNCUDAUMNOPCABQDUEUGQR $.
      $( [14-Oct-1999] $)

    $( The intersection of a nonempty set is a subclass of its union. $)
    intssuni $p |- ( A =/= (/) -> |^| A (_ U. A ) $=
      ( vx vy c0 wne cint cuni cv wcel wral wrex r19.2z ex visset elint2
      eluni2 3imtr4g ssrdv ) ADEZBAFZAGZSBHZCHIZCAJZUCCAKZUBTIUBUAISUDUEUCCALMC
      UBABNOCUBAPQR $.
      $( [21-Dec-2006] $) $( [29-Jul-2006] $)
  $}

  $( Subclass relationship for intersection and union. $)
  intssuni2 $p |- ( ( A (_ B /\ A =/= (/) ) -> |^| A (_ U. B ) $=
    ( c0 wne wss cint cuni intssuni uniss sylan9ssr ) ACDABEAFAGBGAHABIJ $.
    $( [31-Dec-2006] $) $( [29-Jul-2006] $)

  ${
    $d x A $.
    intmin2.1 $e |- A e. V $.
    $( Any set is the smallest of all sets that include it. $)
    intmin2 $p |- |^| { x | A (_ x } = A $=
      ( cv wss cvv crab cint cab rabab inteqi wcel wceq intmin ax-mp eqtr3 ) BA
      DEZAFGZHZQAIZHBRTQAJKBFLSBMCABFNOP $.
      $( [30-Nov-2006] $) $( [20-Sep-2003] $)
  $}

  ${
    $d x A $.  $d x ps $.
    intmin3.2 $e |- ( x = A -> ( ph <-> ps ) ) $.
    intmin3.3 $e |- ps $.
    $( Under subset ordering, the intersection of a class abstraction is less
       than or equal to any of its members. $)
    intmin3 $p |- ( A e. B -> |^| { x | ph } (_ A ) $=
      ( wcel cab cint wss elabg mpbiri intss1 syl ) DEHZDACIZHZQJDKPRBGABCDEFLM
      DQNO $.
      $( [6-Jul-2005] $) $( [3-Jul-2005] $)
  $}

  ${
    $d x y A $.  $d y ph $.
    $( Elimination of a conjunct in a class intersection. $)
    intmin4 $p |- ( A (_ |^| { x | ph } ->
                  |^| { x | ( A (_ x /\ ph ) } = |^| { x | ph } ) $=
      ( vy cab cint wss cv wa wcel wi wal wb ssintab pm3.27 ancr impbid2
      imbi1d 19.20i 19.15 syl sylbi visset elintab 3bitr4g eqrdv ) CABEFZGZDCBH
      ZGZAIZBEFZUGUHUKDHZUIJZKZBLZAUNKZBLZUMULJUMUGJUHAUJKZBLZUPURMZABCNUTUOUQM
