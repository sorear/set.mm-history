  $( A natural number is positive. $)
  nngt0t $p |- ( A e. NN -> 0 < A ) $=
    ( cr wcel c1 cle wbr cc0 clt cn lt01 wa wi ax1re ax0re ltletrt mp3an1 mpan
    mpani nnret nnge1t syl13 ) ABCZDAEFZGAHFZAICUBGDHFZUCUDJDBCZUBUEUCKUDLZMGBC
    UFUBUGNGDAOPQRASATUA $.
    $([26-Sep-99]$)

  $( A number less than one is not a natural number. $)
  lt1nnn $p |- ( ( A e. RR /\ A < 1 ) -> -. A e. NN ) $=
    ( cr wcel c1 clt wbr cn wn cle wb ax1re leltt mpan bicon2d nnge1t con3
    syl6bi imp ) ABCZADEFZAGCZHZSTDAIFZHUBSUCTDBCSUCTHJKDALMNUAUCAOPQR $.
    $([18-Jan-04]$)

  $( Zero is not a natural number. $)
  0nnn $p |- -. 0 e. NN $=
    ( cc0 cr wcel c1 clt wbr cn wn ax0re lt01 lt1nnn mp2an ) ABCADEFAGCHIJAKL
    $.
    $([25-Aug-99]$)

  $( A natural number is non-zero. $)
  nnne0t $p |- ( A e. NN -> A =/= 0 ) $=
    ( cn wcel cc0 wceq wn wne 0nnn eleq1 mtbiri con2 df-ne sylibr ) ABCZADEZFAD
    GONONDBCHADBIJKADLM $.
    $([27-Sep-99]$)

  ${
    nngt0.1 $e |- A e. NN $.
    $( A natural number is positive (inference version). $)
    nngt0 $p |- 0 < A $=
      ( cn wcel cc0 clt wbr nngt0t ax-mp ) ACDEAFGBAHI $.
      $([17-Sep-99]$)

    $( A natural number is non-zero (inference version). $)
    nnne0 $p |- A =/= 0 $=
      ( nnre nngt0 gt0ne0i ) AABCABDE $.
      $([25-Aug-99]$)
  $}

  $( The reciprocal of a natural number is positive. $)
  nnrect $p |- ( A e. NN -> 0 < ( 1 / A ) ) $=
    ( cn wcel c1 cle wbr cc0 cdiv co clt nnge1t lt01 cr wa wi nnret ax1re
    ax0re ltletrt mp3an1 mpan recgt0t syld syl mpani mpd ) ABCZDAEFZGDAHIJFZAKU
    GGDJFZUHUILUGAMCZUJUHNZUIOAPUKULGAJFZUIDMCZUKULUMOZQGMCUNUKUORGDASTUAAUBUCU
