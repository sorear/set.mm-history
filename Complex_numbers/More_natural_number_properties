$(
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
        More natural number properties
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
$)

  $( 2 is a natural number. $)
  2nn $p |- 2_10 e. NN $=
    ( cl2 cn wcel cn1 caddc co peano1c nnaddclt mp2an df-2 eleq1i mpbir ) ABCDD
    EFZBCZDBCZONGGDDHIAMBJKL $.
    $([20-Aug-01]$)

  ${
    $d x y A $.
    nnsqcl.1 $e |- A e. NN $.
    $( The square of a natural number is a natural number. $)
    nnsqcl $p |- ( A ^ 2_10 ) e. NN $=
      ( cl2 cexp co cn wcel cmulc nnmulclt mp2an nncn sqval eleq1i mpbir ) ACDE
      ZFGAAHEZFGZAFGZRQBBAAIJOPFAABKLMN $.
      $([20-Aug-01]$)

    $( A natural number is l.e. its square. $)
    nnlesq $p |- A <_ ( A ^ 2_10 ) $=
      ( cn1 cmulc co cl2 cexp cle nncn mulid1 wbr cn wcel nnge1t ax-mp cn0 clt
      wb lt01 ax0re ax1re nnre ltletr mp2an lemul2 mpbi sqval breqtrr eqbrtrr
      ) ACDEZAAFGEZHAABIZJUJAADEZUKHCAHKZUJUMHKZALMUNBANOZPAQKZUNUORPCQKUNUQSUP
      PCATUAABUBZUCUDCAAUAURURUEOUFAULUGUHUI $.
      $([15-Sep-99]$)

