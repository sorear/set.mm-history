$(
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
        More natural number properties
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
$)

  $( 2 is a natural number. $)
  2nn $p |- 2 e. NN $=
    ( c2 c1 caddc co cn df-2 wcel peano1c nnaddclt mp2an eqeltr ) ABBCDZEFBEGZM
    LEGHHBBIJK $.
    $([20-Aug-01]$)

  ${
    $d x y A $.
    nnsqcl.1 $e |- A e. NN $.
    $( The square of a natural number is a natural number. $)
    nnsqcl $p |- ( A ^ 2 ) e. NN $=
      ( c2 cexp co cmulc cn nncn sqval wcel nnmulclt mp2an eqeltr ) ACDEAAFEZGA
      ABHIAGJZONGJBBAAKLM $.
      $([20-Aug-01]$)

    $( A natural number is less than or equal to its square. $)
    nnlesq $p |- A <_ ( A ^ 2 ) $=
      ( c1 cmulc co c2 cexp cle nncn mulid1 wbr cn wcel nnge1t ax-mp cc0 clt
      wb nngt0 ax1re nnre lemul2 mpbi sqval breqtrr eqbrtrr ) ACDEZAAFGEZHAABIZ
      JUGAADEZUHHCAHKZUGUJHKZALMUKBANOPAQKUKULRABSCAATABUAZUMUBOUCAUIUDUEUF $.
      $([15-Sep-99]$)

