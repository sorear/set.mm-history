    $( Closure of the limit of a sequence of complex numbers. $)
    climcn $p |- ( F ~~> A -> A e. CC ) $=
      ( vx vy vz cli wbr cn cc wf wcel wa cn0 cv clt cle cfv cmin co cabs wi
      wral wrex cr clim pm3.26bd pm3.27d ) BAHIZJKBLZAKMZUJUKULNOEPZQIFPGPZRI
      UNBSATUAUBSUMQIUCGJUDFJUEUCEUFUDEFGABCDUGUHUI $.
      $([30-Sep-99]$)

    $( Convergence of a sequence of complex numbers. $)
    climconv $p |- ( F ~~> A -> A. x e. RR ( 0_10 < x ->
             E. y e. NN A. z e. NN ( y <_ z ->
                ( abs ` ( ( F ` z ) - A ) ) < x ) ) ) $=
      ( cli wbr cn cc wf wcel wa cn0 cv clt cle cfv cmin co cabs wi wral wrex
      cr clim pm3.27bd ) EDHIJKELDKMNOAPZQIBPCPZRIUJESDTUAUBSUIQIUCCJUDBJUEUC
      AUFUDABCDEFGUGUH $.
      $([30-Sep-99]$)
  $}

