  $( A non-negative number is its own absolute value. $)
  absidt $p |- ( A e. RR -> ( 0_10 <_ A -> ( abs ` A ) = A ) ) $=
    ( cr wcel cn0 cle wbr cabs cfv wceq wi cded breq2 fveq2 id cleq12d bi2imd
    ax0re elimel absid dedth ) ABCZDAEFZAGHZAIZJDUAADKZEFZUEGHZUEIZJADAUEIZUBUF
