$(
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
        Decimal representation of numbers
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
$)

$( 18-Sep-99:  The decimal representation of numbers will undergo a
   revision at some point in the future.  For now, every number that
   is needed will be defined as an explicit new constant symbol. $)

  $c 2_10 $. $( The decimal number 2 $)
  $c 3_10 $. $( The decimal number 3 $)
  $c 4_10 $. $( The decimal number 4 $)
  $c 5_10 $. $( The decimal number 5 $)
  $c 6_10 $. $( The decimal number 6 $)
  $c 7_10 $. $( The decimal number 7 $)
  $c 8_10 $. $( The decimal number 8 $)
  $c 9_10 $. $( The decimal number 9 $)

  $( Extend class notation to include the number 2. $)
  cl2 $a class 2_10 $.
  $( Extend class notation to include the number 3. $)
  cl3 $a class 3_10 $.
  $( Extend class notation to include the number 4. $)
  cl4 $a class 4_10 $.
  $( Extend class notation to include the number 5. $)
  cl5 $a class 5_10 $.
  $( Extend class notation to include the number 6. $)
  cl6 $a class 6_10 $.
  $( Extend class notation to include the number 7. $)
  cl7 $a class 7_10 $.
  $( Extend class notation to include the number 8. $)
  cl8 $a class 8_10 $.
  $( Extend class notation to include the number 9. $)
  cl9 $a class 9_10 $.

  $( Note that the numbers 0 and 1 are primitive constants in the axiom
     system. $)
  $( Define the number 2. $)
  df-2 $a |- 2_10 = ( 1_10 + 1_10 ) $.
  $( Define the number 3. $)
  df-3 $a |- 3_10 = ( 2_10 + 1_10 ) $.
  $( Define the number 4. $)
  df-4 $a |- 4_10 = ( 3_10 + 1_10 ) $.
  $( Define the number 5. $)
  df-5 $a |- 5_10 = ( 4_10 + 1_10 ) $.
  $( Define the number 6. $)
  df-6 $a |- 6_10 = ( 5_10 + 1_10 ) $.
  $( Define the number 7. $)
  df-7 $a |- 7_10 = ( 6_10 + 1_10 ) $.
  $( Define the number 8. $)
  df-8 $a |- 8_10 = ( 7_10 + 1_10 ) $.
  $( Define the number 9. $)
  df-9 $a |- 9_10 = ( 8_10 + 1_10 ) $.

  $( The number 2 is real. $)
  2re $p |- 2_10 e. RR $=
    ( cl2 cr wcel cn1 caddc co ax1re addrcl df-2 eleq1i mpbir ) ABCDDEFZBCDDGGH
    ALBIJK $.
    $([27-May-99]$)

  $( The number 3 is real. $)
  3re $p |- 3_10 e. RR $=
    ( cl3 cr wcel cl2 cn1 caddc co 2re ax1re addrcl df-3 eleq1i mpbir ) ABCDEFG
    ZBCDEHIJANBKLM $.
    $([27-May-99]$)

  $( The number 4 is real. $)
  4re $p |- 4_10 e. RR $=
    ( cl4 cr wcel cl3 cn1 caddc co 3re ax1re addrcl df-4 eleq1i mpbir ) ABCDEFG
    ZBCDEHIJANBKLM $.
    $([27-May-99]$)

  $( The number 5 is real. $)
  5re $p |- 5_10 e. RR $=
    ( cl5 cr wcel cl4 cn1 caddc co 4re ax1re addrcl df-5 eleq1i mpbir ) ABCDEFG
    ZBCDEHIJANBKLM $.
    $([27-May-99]$)

  $( The number 6 is real. $)
  6re $p |- 6_10 e. RR $=
    ( cl6 cr wcel cl5 cn1 caddc co 5re ax1re addrcl df-6 eleq1i mpbir ) ABCDEFG
    ZBCDEHIJANBKLM $.
    $([27-May-99]$)

  $( The number 7 is real. $)
  7re $p |- 7_10 e. RR $=
    ( cl7 cr wcel cl6 cn1 caddc co 6re ax1re addrcl df-7 eleq1i mpbir ) ABCDEFG
    ZBCDEHIJANBKLM $.
    $([27-May-99]$)

  $( The number 8 is real. $)
  8re $p |- 8_10 e. RR $=
    ( cl8 cr wcel cl7 cn1 caddc co 7re ax1re addrcl df-8 eleq1i mpbir ) ABCDEFG
    ZBCDEHIJANBKLM $.
    $([27-May-99]$)

  $( The number 9 is real. $)
  9re $p |- 9_10 e. RR $=
    ( cl9 cr wcel cl8 cn1 caddc co 8re ax1re addrcl df-9 eleq1i mpbir ) ABCDEFG
    ZBCDEHIJANBKLM $.
    $([27-May-99]$)

  $( The number 2 is positive. $)
  2pos $p |- 0_10 < 2_10 $=
    ( cn0 cn1 caddc co cl2 clt ax1re lt01 addgt0i df-2 breqtrr ) ABBCDEFBBGGHHI
    JK $.
    $([27-May-99]$)

  $( The number 3 is positive. $)
  3pos $p |- 0_10 < 3_10 $=
    ( cn0 cl2 cn1 caddc co cl3 clt 2re ax1re 2pos lt01 addgt0i df-3 breqtrr )
    ABCDEFGBCHIJKLMN $.
    $([27-May-99]$)

  $( The number 4 is positive. $)
  4pos $p |- 0_10 < 4_10 $=
    ( cn0 cl3 cn1 caddc co cl4 clt 3re ax1re 3pos lt01 addgt0i df-4 breqtrr )
    ABCDEFGBCHIJKLMN $.
    $([27-May-99]$)

  $( The number 5 is positive. $)
  5pos $p |- 0_10 < 5_10 $=
    ( cn0 cl4 cn1 caddc co cl5 clt 4re ax1re 4pos lt01 addgt0i df-5 breqtrr )
    ABCDEFGBCHIJKLMN $.
    $([27-May-99]$)

  $( The number 6 is positive. $)
  6pos $p |- 0_10 < 6_10 $=
    ( cn0 cl5 cn1 caddc co cl6 clt 5re ax1re 5pos lt01 addgt0i df-6 breqtrr )
    ABCDEFGBCHIJKLMN $.
    $([27-May-99]$)

  $( The number 7 is positive. $)
  7pos $p |- 0_10 < 7_10 $=
    ( cn0 cl6 cn1 caddc co cl7 clt 6re ax1re 6pos lt01 addgt0i df-7 breqtrr )
    ABCDEFGBCHIJKLMN $.
    $([27-May-99]$)

  $( The number 8 is positive. $)
  8pos $p |- 0_10 < 8_10 $=
    ( cn0 cl7 cn1 caddc co cl8 clt 7re ax1re 7pos lt01 addgt0i df-8 breqtrr )
    ABCDEFGBCHIJKLMN $.
    $([27-May-99]$)

  $( The number 9 is positive. $)
  9pos $p |- 0_10 < 9_10 $=
    ( cn0 cl8 cn1 caddc co cl9 clt 8re ax1re 8pos lt01 addgt0i df-9 breqtrr )
    ABCDEFGBCHIJKLMN $.
    $([27-May-99]$)

