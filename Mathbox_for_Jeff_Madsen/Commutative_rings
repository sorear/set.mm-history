    $( [25-Jun-2011] $) $( [8-Jun-2010] $)

  $( The predicate "is a field". $)
  isfld2 $p |- ( K e. Fld <-> ( K e. DivRing /\ K e. CRing ) ) $=
    ( cfld wcel cdrng ccring wa flddivrng fldcrng jca ccm2 cin elin biimpri
