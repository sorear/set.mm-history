$(
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
        Commutative rings
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
$)

  $c CRing $.

  $( Extend class notation with the class of commutative rings. $)
  ccring $a class CRing $.

  $( Define the class of commutative rings. $)
  df-crngo $a |- CRing = ( RingOps i^i Com2 ) $.

  $( The predicate "is a commutative ring".  (Contributed by Jeff Madsen,
     8-Jun-2010.) $)
  iscrngo $p |- ( R e. CRing <-> ( R e. RingOps /\ R e. Com2 ) ) $=
    ( ccring wcel crngo ccm2 cin wa df-crngo eleq2i elin bitri ) ABCADEFZCADCAE
    CGBLAHIADEJK $.
    $( [8-Jun-2010] $)

  ${
    $d R x y $.  $d X x y $.
    iscring2.1 $e |- G = ( 1st ` R ) $.
    iscring2.2 $e |- H = ( 2nd ` R ) $.
    iscring2.3 $e |- X = ran G $.
    $( The predicate "is a commutative ring".  (Contributed by Jeff Madsen,
       8-Jun-2010.) $)
    iscrngo2 $p |- ( R e. CRing <-> ( R e. RingOps /\
                          A. x e. X A. y e. X ( x H y ) = ( y H x ) ) ) $=
      ( wcel crngo ccm2 wa cv co wceq wral c1st cfv cvv ccring iscrngo c2nd cop
      wb wrel relrngo 1st2nd eleq1 crn rneqi eqtri raleqi opreqi eqeq12i ralbii
      mpan bitri fvex iscom2 mp2an 3bitr4ri syl6bb syl pm5.32i ) CUAJCKJZCLJZMV
      FANZBNZEOZVIVHEOZPZBFQZAFQZMCUBVFVGVNVFCCRSZCUCSZUDZPZVGVNUEKUFVFVRUGCKUH
