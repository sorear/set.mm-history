  ${
    $d ph w x y z $.  $d G w x y z $.  $d H w x y z $.  $d R x y $.
    $d X w x y z $.  $d U x y $.
    iscringd.1 $e |- G = ( 1st ` R ) $.
    iscringd.2 $e |- H = ( 2nd ` R ) $.
    iscringd.3 $e |- ( ph -> R e. ( _V X. _V ) ) $.
    iscringd.4 $e |- ( ph -> G e. Abel ) $.
    iscringd.5 $e |- ( ph -> X = ran G ) $.
    iscringd.6 $e |- ( ph -> H : ( X X. X ) --> X ) $.
    iscringd.7 $e |- ( ( ph /\ ( x e. X /\ y e. X /\ z e. X ) )
                                  -> ( ( x H y ) H z ) = ( x H ( y H z ) ) ) $.
    iscringd.8 $e |- ( ( ph /\ ( x e. X /\ y e. X /\ z e. X ) )
                          -> ( x H ( y G z ) ) = ( ( x H y ) G ( x H z ) ) ) $.
    iscringd.9 $e |- ( ph -> U e. X ) $.
    iscringd.10 $e |- ( ( ph /\ y e. X ) -> ( y H U ) = y ) $.
    iscringd.11 $e |- ( ( ph /\ ( x e. X /\ y e. X ) )
                                              -> ( x H y ) = ( y H x ) ) $.
    $( Conditions that determine a commutative ring. $)
    iscringd $p |- ( ph -> R e. CRing ) $=
      ( vw ccring wcel cring cv co wceq crn wral eqid iscring2 w3a wa wi eleq1
