$(
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
        Topological limits
=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
$)

  $c ~~>t $.
  $( Extend class notation with the topological convergence relation. $)
  ctlm $a class ~~>t $.

  ${
    $d j r f x u m n $.
    $( Define the convergence relation on sequences in a topological space.  A
       sequence ` f ` converges to a point ` x ` if for every open neighborhood
       ` U ` of ` x ` , for all large enough ` m ` we have
       ` f ( m ) e. U ` . $)
    df-tlm $a |- ~~>t = { <. j , r >. | ( j e. Top /\ r = { <. f , x >. |
            ( f : NN --> U. j /\ x e. U. j /\ A. u e. ( ( nei ` j ) ` { x } )
                      E. n e. NN A. m e. ( ZZ>= ` n ) ( f ` m ) e. u ) } ) } $.
  $}

  ${
    $d J j r f x u m n $.  $d X j r f x u m n $.  $d F f x u m n $.
    $d Y f x u m n $.  $d A f x u m n $.
    tlmval.1 $e |- X = U. J $.
    $( The convergence relation on sequences in a topological space.
       (Contributed by Jeff Madsen, 2-Sep-2009.) $)
    tlmval $p |- ( J e. Top -> ( ~~>t ` J ) = { <. f , x >. |
                ( f : NN --> X /\ x e. X /\ A. u e. ( ( nei ` J ) ` { x } )
                      E. n e. NN A. m e. ( ZZ>= ` n ) ( f ` m ) e. u ) } ) $=
      ( vj ctop wcel cn cv cfv wral cnei copab cvv wceq wa vr cuz wrex csn ctlm
      wf w3a cxp cpw wss fssxp elpw sylibr anim1i 3impa ssopab2i opabssxp sstri
      vex nnex cuni uniexg syl5eqel xpexg sylancr pwexg syl syl2anc ssexg unieq
      wb syl6eqr eleq2d fveq2 fveq1d raleqdv 3anbi123d opabbidv df-tlm fvopab4g
      feq3 mpdan ) FJKZLGCMZUFZAMZGKZDMWDNBMKDEMUBNOELUCZBWFUDZFPNZNZOZUGZCAQZR
      KZFUENWNSWCWNLGUHZUIZGUHZUJWRRKZWOWNWDWQKZWGTZWLTZCAQWRWMXBCAWEWGWLXBWEWG
      TXAWLWEWTWGWEWDWPUJWTLGWDUKWDWPCUSULUMUNUNUOUPWLCAWQGUQURWCWQRKZGRKZWSWCW
      PRKZXCWCLRKXDXEUTWCGFVAZRHFJVBVCZLGRRVDVEWPRVFVGXGWQGRRVDVHWNWRRVIVEIUAFL
      IMZVAZWDUFZWFXIKZWHBWIXHPNZNZOZUGZCAQWNJRUEXHFSZXOWMCAXPXJWEXKWGXNWLXPXIG
      SXJWEVKXPXIXFGXHFVJHVLZXIGLWDWAVGXPXIGWFXQVMXPWHBXMWKXPWIXLWJXHFPVNVOVPVQ
      VRABCIDEUAVSVTWB $.
      $( [2-Sep-2009] $)

    $( The binary relation " ` F ` converges to ` Y ` topologically".
       (Contributed by Jeff Madsen, 2-Sep-2009.) $)
    tlmbr $p |- ( ( J e. Top /\ Y e. A ) -> ( F ( ~~>t ` J ) Y <->
          ( F : NN --> X /\ Y e. X /\ A. u e. ( ( nei ` J ) ` { Y } )
                    E. n e. NN A. m e. ( ZZ>= ` n ) ( F ` m ) e. u ) ) ) $=
      ( vf vx wcel cfv wbr cn cv wf wral w3a cvv ctop ctlm cuz wrex cnei tlmval
      copab breqd wceq feq1 fveq1 eleq1d rexralbidv ralbidv 3anbi13d eleq1 sneq
      csn fveq2d raleqdv 3anbi23d eqid nnex fex mpan2 3ad2ant1 brabg2 sylan9bb
      ) FUALZEHFUBMZNEHOGJPZQZKPZGLZCPZVKMZAPZLZCDPUCMZRDOUDZAVMURZFUEMZMZRZSZJ
      KUGZNHBLOGEQZHGLZVOEMZVQLZCVSRDOUDZAHURZWBMZRZSZVIVJWFEHKAJCDFGIUFUHWEWGV
      NWKAWCRZSWOJKEHTBWFVKEUIZVLWGWDWPVNOGVKEUJWQVTWKAWCWQVRWJDCOVSWQVPWIVQVOV
      KEUKULUMUNUOVMHUIZVNWHWPWNWGVMHGUPWRWKAWCWMWRWAWLWBVMHUQUSUTVAWFVBWGWHETL
      ZWNWGOTLWSVCOGTEVDVEVFVGVH $.
      $( [2-Sep-2009] $)

    $( The binary relation " ` F ` converges to ` Y ` topologically".
       (Contributed by Jeff Madsen, 2-Sep-2009.) $)
    tlmbrf $p |- ( ( J e. Top /\ Y e. A /\ F : NN --> X ) -> ( F ( ~~>t ` J ) Y
                    <-> ( Y e. X /\ A. u e. ( ( nei ` J ) ` { Y } ) E. n e. NN
                                A. m e. ( ZZ>= ` n ) ( F ` m ) e. u ) ) ) $=
      ( ctop wcel cn wf w3a ctlm cfv wbr cv wral wa cuz wrex cnei tlmbr 3adant3
      csn wb 3anass biidd 3anibar syl5bb bitrd ) FJKZHBKZLGEMZNZEHFOPQZUOHGKZCR
      EPARKCDRUAPSDLUBAHUFFUCPPSZNZURUSTZUMUNUQUTUGUOABCDEFGHIUDUEUTUOVATZUPVAU
      OURUSUHUMUNUOVBVAUPVBUIUJUKUL $.
      $( [2-Sep-2009] $)
  $}

  ${
    $d F a b c d p q u v x y $.  $d J a b c d p q u v x y $.
    $d X a b c d p q u v x y $.
    haustlmu.1 $e |- X = U. J $.
    $( Limits are unique in a Hausdorff space.  (Contributed by Jeff Madsen,
       2-Sep-2009.) $)
    haustlmu $p |- ( J e. Haus -> E* x F ( ~~>t ` J ) x ) $=
      ( vy vb va vd vc wcel cv cfv wa wceq wi cn wral wrex syl vu vv vp vq ctlm
      cha wbr wal wmo wf cuz csn cnei w3a ctop wb haustop cvv vex tlmbr anbi12d
