    $( The binary relation " ` F ` converges to ` Y ` topologically". $)
    tlmbr $p |- ( ( J e. Top /\ Y e. A ) -> ( F ( ~~>t ` J ) Y <->
          ( F : NN --> X /\ Y e. X /\ A. u e. ( ( nei ` J ) ` { Y } )
                    E. n e. NN A. m e. ( ZZ>= ` n ) ( F ` m ) e. u ) ) ) $=
      ( vf vx ctop wcel ctlm cfv wbr cn cv wf cuz wral wrex csn cnei w3a copab
      tlmval breqd cvv wceq feq1 fveq1 eleq1d rexralbidv ralbidv 3anbi13d
      eleq1 sneq fveq2d raleqdv 3anbi23d eqid nnex fex mpan2 3ad2ant1 brabg2
      sylan9bb ) FLMZEHFNOZPEHQGJRZSZKRZGMZCRZVKOZARZMZCDRTOZUADQUBZAVMUCZFUDOZ
      OZUAZUEZJKUFZPHBMQGESZHGMZVOEOZVQMZCVSUADQUBZAHUCZWBOZUAZUEZVIVJWFEHKAJCD
