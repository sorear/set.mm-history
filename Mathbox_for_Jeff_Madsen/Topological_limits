      $( [2-Sep-2009] $)

    $( The binary relation " ` F ` converges to ` Y ` topologically". $)
    tlmbr $p |- ( ( J e. Top /\ Y e. A ) -> ( F ( ~~>t ` J ) Y <->
          ( F : NN --> X /\ Y e. X /\ A. u e. ( ( nei ` J ) ` { Y } )
                    E. n e. NN A. m e. ( ZZ>= ` n ) ( F ` m ) e. u ) ) ) $=
      ( vf vx ctop wcel ctlm cfv wbr cn cv wf cuz wral wrex csn cnei w3a copab
      tlmval breqd cvv wceq feq1 fveq1 eleq1d rexralbidv ralbidv 3anbi13d
      eleq1 sneq fveq2d raleqdv 3anbi23d eqid nnex fex mpan2 3ad2ant1 brabg2
      sylan9bb ) FLMZEHFNOZPEHQGJRZSZKRZGMZCRZVKOZARZMZCDRTOZUADQUBZAVMUCZFUDOZ
      OZUAZUEZJKUFZPHBMQGESZHGMZVOEOZVQMZCVSUADQUBZAHUCZWBOZUAZUEZVIVJWFEHKAJCD
      FGIUGUHWEWGVNWKAWCUAZUEWOJKEHUIBWFVKEUJZVLWGWDWPVNQGVKEUKWQVTWKAWCWQVRWJD
      CQVSWQVPWIVQVOVKEULUMUNUOUPVMHUJZVNWHWPWNWGVMHGUQWRWKAWCWMWRWAWLWBVMHURUS
      UTVAWFVBWGWHEUIMZWNWGQUIMWSVCQGUIEVDVEVFVGVH $.
      $( [2-Sep-2009] $)

    $( The binary relation " ` F ` converges to ` Y ` topologically". $)
    tlmbrf $p |- ( ( J e. Top /\ Y e. A /\ F : NN --> X ) -> ( F ( ~~>t ` J ) Y
                    <-> ( Y e. X /\ A. u e. ( ( nei ` J ) ` { Y } ) E. n e. NN
                                A. m e. ( ZZ>= ` n ) ( F ` m ) e. u ) ) ) $=
      ( ctop wcel cn wf w3a ctlm cfv wbr cv cuz wral wrex csn cnei wa wb tlmbr
      3adant3 3anass biidd 3anibar syl5bb bitrd ) FJKZHBKZLGEMZNZEHFOPQZUOHGKZC
      REPARKCDRSPTDLUAAHUBFUCPPTZNZURUSUDZUMUNUQUTUEUOABCDEFGHIUFUGUTUOVAUDZUPV
      AUOURUSUHUMUNUOVBVAUPVBUIUJUKUL $.
      $( [2-Sep-2009] $)
  $}

  ${
    $d F a b c d p q u v x y $.  $d J a b c d p q u v x y $.
    $d X a b c d p q u v x y $.
    haustlmu.1 $e |- X = U. J $.
    $( Limits are unique in a Hausdorff space. $)
    haustlmu $p |- ( J e. Haus -> E* x F ( ~~>t ` J ) x ) $=
      ( vy vb vu va vd vv vc vp vq cha wcel cv ctlm cfv wbr wa wceq wi wal wmo
