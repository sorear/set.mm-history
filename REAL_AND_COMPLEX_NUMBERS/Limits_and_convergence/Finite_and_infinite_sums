  ${
    $d k A $.
    $( The second class argument to a sum can be chosen so that it is always a
       set.  (Contributed by Mario Carneiro, 13-Jul-2013.) $)
    sum2id $p |- sum_ k e. A B = sum_ k e. A ( _I ` B ) $=
      ( cid cfv wceq csu sumeq2ii cv wcel cvv fvex fvi ax-mp eqcomi a1i mprg )
      BDEZRDEZFZABCGARCGFCAABRCHTCIAJSRRKJSRFBDLRKMNOPQ $.
      $( [13-Jul-2013] $) $( [11-Dec-2005] $)
  $}

  ${
    $d j k x A $.  $d j x B $.
    $( A lemma to facilitate conversions from the function form to the
       class-variable form of a sum.  (Contributed by Mario Carneiro,
       12-Aug-2013.) $)
    sumfc $p |- sum_ j e. A ( ( k e. A |-> B ) ` j ) = sum_ k e. A B $=
      ( vx cmpt cfv csu cid eqid fvmpt2i sumeq2i hbmpt1 wcel ax-17 hbfv cbvsumi
      cv fveq2 sum2id 3eqtr4i ) ADRZDABFZGZDHABIGZDHACRZUCGZCHABDHAUDUEDDABUCUC
      JKLEAUGUDCDDEUFUCDEABMERZUFNDOPUHUDNCOUFUBUCSQABDTUA $.
      $( [23-Apr-2014] $) $( [12-Aug-2013] $)
  $}

  ${
    $d f A $.
    $( A lemma for working with finite sums.  (Contributed by Mario Carneiro,
       22-Apr-2014.) $)
    fz1f1o $p |- ( A e. Fin -> ( A = (/) \/ ( ( # ` A ) e. NN /\
                   E. f f : ( 1 ... ( # ` A ) ) -1-1-onto-> A ) ) ) $=
      ( cfn wcel chash cfv cc0 wceq cn wo c0 c1 cfz co cv wf1o wex wa cn0 mpbid
      hashcl elnn0 sylib orcomd hasheq0 cen wbr hashfz1 syl wb fzfi hashen mpan
