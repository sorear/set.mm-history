    grpsubadd.m $e |- M = ( -g ` G ) $.
    $( Relationship between group subtraction and addition. $)
    grpsubadd $p |- ( ( G e. Grp /\ ( X e. B /\ Y e. B /\ Z e. B ) )
          -> ( ( X M Y ) = Z <-> ( Z P Y ) = X ) ) $=
      ( cgrp wcel w3a co wceq cfv eqid eqeq1d 3ad2antr2 syl13anc cminusg simpr1
      wa grpsubval 3adant3r3 simpl grpinvcl grpcl syl3anc simpr3 simpr2 grprcan
      wb c0g grpass grplinv oveq2d grprid 3ad2antr1 3eqtrd 3bitr2d eqcom syl6bb
      ) CKLZEALZFALZGALZMZUCZEFDNZGOZEGFBNZOZVLEOVIVKEFCUAPZPZBNZGOZVPFBNZVLOZV
      MVIVJVPGVDVEVFVJVPOVGABCVNDKEFHIVNQZJUDUERVIVDVPALZVGVFVSVQUMVDVHUFZVIVDV
      EVOALZWAWBVDVEVFVGUBZVDVEVFWCVGACVNFHVTUGSZABCEVOHIUHUIVDVEVFVGUJVDVEVFVG
      UKZABCVPGFHIULTVIVREVLVIVREVOFBNZBNZECUNPZBNZEVIVDVEWCVFVRWHOWBWDWEWFABCE
      VOFHIUOTVIWGWIEBVDVEVFWGWIOVGABCVNWIFHIWIQZVTUPSUQVDVFVEWJEOVGABCWIEHIWKU
      RUSUTRVAEVLVBVC $.
      $( [31-Mar-2014] $)

    $( Associative-type law for group subtraction and addition. $)
    grpaddsubass $p |- ( ( G e. Grp /\ ( X e. B /\ Y e. B /\ Z e. B ) ) ->
         ( ( X P Y ) M Z ) = ( X P ( Y M Z ) ) ) $=
      ( cgrp wcel w3a wa co cminusg cfv wceq simpl grpsubval simpr1 simpr2 eqid
      grpinvcl 3ad2antr3 grpass grpcl 3adant3r3 simpr3 syl3anc 3adant3r1 oveq2d
      syl13anc 3eqtr4d ) CKLZEALZFALZGALZMZNZEFBOZGCPQZQZBOZEFVCBOZBOZVAGDOZEFG
      DOZBOUTUOUPUQVCALZVDVFRUOUSSZUOUPUQURUAUOUPUQURUBUOUPURVIUQACVBGHVBUCZUDU
      EABCEFVCHIUFUMUTUOVAALZURVGVDRVJUOUPUQVLURABCEFHIUGUHUOUPUQURUIABCVBDKVAG
      HIVKJTUJUTVHVEEBUOUQURVHVERUPABCVBDKFGHIVKJTUKULUN $.
      $( [16-Apr-2014] $)

    $( Group theory analog of ~ pncan . $)
    grppncan $p |- ( ( G e. Grp /\ X e. B /\ Y e. B ) ->
        ( ( X P Y ) M Y ) = X ) $=
      ( cgrp wcel w3a co c0g cfv wceq simp1 simp2 simp3 grpaddsubass wa 3adant2
      syl13anc eqid grpsubid oveq2d grprid 3adant3 3eqtrd ) CJKZEAKZFAKZLZEFBMF
      DMZEFFDMZBMZECNOZBMZEUMUJUKULULUNUPPUJUKULQUJUKULRUJUKULSZUSABCDEFFGHITUC
      UJULUPURPUKUJULUAUOUQEBACDUQFGUQUDZIUEUFUBUJUKUREPULABCUQEGHUTUGUHUI $.
      $( [16-Apr-2014] $)

    $( Group theory analog of ~ npcan . $)
    grpnpcan $p |- ( ( G e. Grp /\ X e. B /\ Y e. B ) ->
        ( ( X M Y ) P Y ) = X ) $=
      ( cgrp wcel w3a cminusg cfv co wceq simp1 3adant2 syld3an3 grpsubval eqid
      grpinvcl grpcl syl3anc grppncan eqcomd grpinvinv oveq12d 3eqtr3rd ) CJKZE
