    isabvd.1 $e |- ( ph -> R e. Ring ) $.
    isabvd.2 $e |- ( ph -> F : B --> RR ) $.
    isabvd.3 $e |- ( ph -> ( F ` Z ) = 0 ) $.
    isabvd.4 $e |- ( ( ph /\ x e. B /\ x =/= Z ) -> 0 < ( F ` x ) ) $.
    isabvd.5 $e |- ( ( ph /\
      ( x e. B /\ x =/= Z ) /\ ( y e. B /\ y =/= Z ) ) ->
      ( F ` ( x T y ) ) = ( ( F ` x ) x. ( F ` y ) ) ) $.
    isabvd.6 $e |- ( ( ph /\
      ( x e. B /\ x =/= Z ) /\ ( y e. B /\ y =/= Z ) ) ->
      ( F ` ( x P y ) ) <_ ( ( F ` x ) + ( F ` y ) ) ) $.
