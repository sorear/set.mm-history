    ${
      abveq0.z $e |- Z = ( 0g ` R ) $.
      $( The value of an absolute value is zero iff the argument is zero. $)
      abveq0 $p |- ( ( F e. A /\ X e. B ) -> ( ( F ` X ) = 0 <-> X = Z ) ) $=
