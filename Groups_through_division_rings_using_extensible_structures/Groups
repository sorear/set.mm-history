  ${
    $d a b c e f g m p w x $.
    $( Define class of all groups. $)
    df-grp $a |- Grp = { f | E. g E. p ( g = ( Base ` f )
       /\ p = ( +g ` f ) /\ ( A. a e. g A. b e. g A. c e. g ( ( a p b ) e. g
            /\ ( ( a p b ) p c ) = ( a p ( b p c ) ) ) /\
          E. e e. g A. a e. g ( ( e p a ) = a /\
            E. m e. g ( m p a ) = e ) ) ) } $.

    $( Define group identity element. $)
    df-0g $a |- 0g = ( g e. _V |-> ( iota_ e e. ( Base ` g )
      A. x e. ( Base ` g ) ( e ( +g ` g ) x ) = x ) ) $.

    $( Define inverse of group element. $)
    df-minusg $a |- -g = ( g e. _V |-> ( x e. ( Base ` g )
  |-> ( iota_ w e. ( Base ` g ) ( w ( +g ` g ) x ) = ( 0g ` g ) ) ) ) $.
  $}


  ${
    $d a b c e f g m p $.
    $( Alternate definition of the class of all groups using class
       substitution. $)
    dfgrp2 $p |- Grp = { f | [ ( Base ` f ) / g ] [ ( +g ` f ) / p ]
      ( A. a e. g A. b e. g A. c e. g ( ( a p b ) e. g
            /\ ( ( a p b ) p c ) = ( a p ( b p c ) ) ) /\
          E. e e. g A. a e. g ( ( e p a ) = a /\
            E. m e. g ( m p a ) = e ) ) } $=
      ( cgrp cv cbs cfv wceq cplusg co wcel wa wral wrex w3a wex cab wsbc
      df-grp fvex sbc5 19.42v 3anass exbii anbi2i 3bitr4ri bitri abbii eqtr4i
      ) ICJZBJZKLZMZEJZUPNLZMZFJZGJZUSOZUOPVDHJZUSOVBVCVEUSOUSOMQHUORGUORFUORAJ
