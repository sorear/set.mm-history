    $( The base set of a constructed group. $)
    grpbase $p |- ( B e. V -> B = ( Base ` G ) ) $=
      ( vs cbs cnx cfv cop cplusg cpr cvv prex eqeltri wfn wfun eqid grpfn
      fnfun ax-mp baseid opex prid1 eleqtrri strfv ) ACGDFCHGIZAJZHKIZBJZLZMEUH
      UJNOCUGUILZPCQAULBCEULRSULCTUAFUBUHUKCUHUJUGAUCUDEUEUF $.
